<?xml version="1.0" encoding="UTF-8"?>
<lint>
    <!-- Ignore packages outside com.halloapp -->
    <issue id="all">
        <ignore path="src/main/java/com/github/*" />
        <ignore path="src/main/java/com/theartofdev/*" />
        <ignore path="src/main/java/com/southernstorm/*" />
    </issue>

    <!-- Expected; we upload new strings on push to master -->
    <issue id="MissingTranslation" severity="ignore" />
    <!-- Expected; new strings import to other languages from POEditor like this -->
    <issue id="ImpliedQuantity" severity="ignore" />
    <issue id="MissingQuantity" severity="ignore" />
    <!-- Expected; strings deleted from English get removed from other languages on next sync -->
    <issue id="ExtraTranslation" severity="ignore" />
    <issue id="MissingDefaultResource" severity="ignore" />
</lint>
