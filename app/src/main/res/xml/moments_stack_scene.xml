<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/momentRightTransition"
        motion:constraintSetStart="@+id/momentStart"
        motion:constraintSetEnd="@+id/momentRightEnd"
        motion:duration="1000">
        <OnSwipe
            motion:touchAnchorId="@+id/top"
            motion:touchAnchorSide="right"
            motion:dragDirection="dragRight" />
    </Transition>

    <Transition
        android:id="@+id/momentLeftTransition"
        motion:constraintSetStart="@+id/momentStart"
        motion:constraintSetEnd="@+id/momentLeftEnd"
        motion:duration="1000">
        <OnSwipe
            motion:touchAnchorId="@+id/top"
            motion:touchAnchorSide="left"
            motion:dragDirection="dragLeft" />
    </Transition>

    <ConstraintSet android:id="@+id/momentStart">
        <Constraint
            android:id="@+id/top"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/middle"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:rotation="10"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/bottom"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:rotation="10"
            android:alpha="0"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/momentRightEnd">
        <Constraint
            android:id="@+id/top"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:translationY="140dp"
            android:rotation="90"
            android:alpha="0"
            motion:layout_constraintStart_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/middle"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/bottom"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:rotation="10"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/momentLeftEnd">
        <Constraint
            android:id="@+id/top"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:translationY="140dp"
            android:rotation="-90"
            android:alpha="0"
            motion:layout_constraintEnd_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/middle"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/bottom"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:rotation="10"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/momentSingle">
        <Constraint
            android:id="@+id/top"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/middle"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:alpha="0"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/bottom"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:alpha="0"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

</MotionScene>
