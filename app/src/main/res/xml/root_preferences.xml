<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/notifications">

        <SwitchPreferenceCompat
            app:key="notify_posts"
            app:title="@string/notify_posts"
            app:defaultValue="true"/>

        <SwitchPreferenceCompat
            app:key="notify_comments"
            app:title="@string/notify_comments"
            app:defaultValue="true"/>


    </PreferenceCategory>

    <PreferenceCategory app:title="@string/help">

        <Preference
            app:key="send_logs"
            app:title="@string/send_logs" />

        <Preference
            app:key="debug"
            app:title="DEBUG"
            app:isPreferenceVisible="false" />

    </PreferenceCategory>

</PreferenceScreen>
