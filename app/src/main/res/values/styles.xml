<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppThemeBase" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_secondary</item>
        <item name="android:textColorLink">@color/color_link</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:navigationBarColor">@color/color_primary_dark</item>
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="actionBarPopupTheme">@style/ActionBar.PopupTheme</item>
        <item name="actionModeCloseDrawable">@drawable/ic_close</item>
        <item name="actionModeBackground">@color/window_background</item>
        <item name="useLightSystemBars">@bool/light_system_bars</item>
        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="bottomSheetDialogTheme">@style/RoundedBottomSheetDialog</item>
        <item name="badgeStyle">@style/Widget.Badge</item>
        <item name="colorControlHighlight">@color/rippleColor</item>
        <item name="colorControlActivated">@color/color_secondary</item>
    </style>

    <style name="AppTheme" parent="AppThemeBase"/>

    <style name="AppTheme.Home" parent="AppTheme.NoActionBar">
        <item name="toolbarStyle">@style/Toolbar.Home</item>
        <item name="actionModeBackground">@color/color_secondary</item>
        <item name="actionBarStyle">@style/ActionBar.Home</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="actionModeCloseDrawable">?attr/homeAsUpIndicator</item>
    </style>

    <style name="AppTheme.Transparent" parent="AppTheme.NoActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/dimmed_window_overlay</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:navigationBarColor">@color/dimmed_window_overlay</item>
        <item name="android:statusBarColor">@color/dimmed_window_overlay</item>
        <item name="useLightSystemBars">false</item>
    </style>

    <style name="AppTheme.GroupBackground">
        <item name="actionBarStyle">@style/ActionBar.GroupBackground</item>
        <item name="actionModeBackground">@color/group_bg_picker_background</item>
        <item name="android:actionMenuTextAppearance">@style/TextAppearance.ActionMenuItem</item>
    </style>

    <style name="AppTheme.ActivityCenter">
        <item name="android:actionMenuTextAppearance">@style/TextAppearance.ActionMenuItem</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Chat" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@color/chat_background</item>
    </style>

    <style name="AppTheme.Black" parent="Theme.AppCompat">
        <item name="actionBarStyle">@style/ActionBarBlack</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:textColorPrimary">#FFF</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="AppTheme.Black.Translucent" parent="AppTheme.Black">
        <item name="actionBarStyle">@style/ActionBarBlack.Translucent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppTheme.Popup">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="AppTheme.Popup.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PostContentActivity" parent="AppTheme.Popup.NoActionBar">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="android:navigationBarColor">@color/dimmed_window_overlay</item>
        <item name="android:statusBarColor">@color/dimmed_window_overlay</item>
        <item name="useLightSystemBars">false</item>
    </style>

    <style name="AppTheme.MediaPickerActivity">
        <item name="actionMenuTextColor">@color/color_secondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:actionMenuTextAppearance">@style/TextAppearance.ActionMenuItem</item>
        <item name="actionModeCloseDrawable">?attr/homeAsUpIndicator</item>
    </style>

    <style name="RoundedBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundedBottomSheet</item>
        <item name="android:windowIsFloating">false</item> <!-- This is important -->
        <item name="android:statusBarColor">@android:color/transparent</item> <!-- And then this will be needed -->
        <item name="android:navigationBarColor">@color/window_background</item>
        <item name="android:colorBackground">@color/window_background</item>
    </style>

    <style name="RoundedBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/RoundedAppearanceBottomSheetDialog</item>
    </style>

    <style name="RoundedAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.Toolbar.Title</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.Toolbar.Subtitle</item>
    </style>

    <style name="Toolbar.Home" parent="Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.Toolbar.Title.Home</item>
    </style>

    <style name="Toolbar.GroupFeed" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="titleTextColor">@color/primary_text</item>
        <item name="colorControlNormal">@color/primary_text</item>
    </style>

    <style name="ActionBar" parent="@style/Widget.MaterialComponents.ActionBar.Solid">
        <item name="background">@color/color_action_bar</item>
        <item name="backgroundStacked">@color/color_action_bar</item>
        <item name="backgroundSplit">@color/color_action_bar</item>
        <item name="elevation">0dp</item>
        <item name="titleTextStyle">@style/TextAppearance.Toolbar.Title</item>
        <item name="subtitleTextStyle">@style/TextAppearance.Toolbar.Subtitle</item>
    </style>

    <style name="ActionBar.PopupTheme" parent="@style/Widget.MaterialComponents.ActionBar.Solid">
        <item name="colorSurface">@color/overflow_menu_bg</item>
    </style>

    <style name="ActionBar.GroupBackground" parent="@style/Widget.MaterialComponents.ActionBar.Solid">
        <item name="background">@color/group_bg_picker_background</item>
        <item name="backgroundStacked">@color/group_bg_picker_background</item>
        <item name="backgroundSplit">@color/group_bg_picker_background</item>
        <item name="elevation">0dp</item>
        <item name="titleTextStyle">@style/TextAppearance.Toolbar.Title</item>
        <item name="subtitleTextStyle">@style/TextAppearance.Toolbar.Subtitle</item>
    </style>

    <style name="ActionBar.Home" parent="ActionBar">
        <item name="background">@color/settings_header_background</item>
        <item name="backgroundStacked">@color/settings_header_background</item>
        <item name="backgroundSplit">@color/settings_header_background</item>
        <item name="titleTextStyle">@style/TextAppearance.ActionBar.Title.Home</item>
        <item name="subtitleTextStyle">@style/TextAppearance.ActionBar.Subtitle.Home</item>
    </style>

    <style name="ActionBarBlack" parent="@style/Widget.MaterialComponents.ActionBar.Solid">
        <item name="background">@android:color/black</item>
        <item name="backgroundStacked">@android:color/black</item>
        <item name="backgroundSplit">@android:color/black</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="ActionBarBlack.Translucent" parent="@style/Widget.MaterialComponents.ActionBar.Solid">
        <item name="background">@android:color/transparent</item>
        <item name="backgroundStacked">@android:color/transparent</item>
        <item name="backgroundSplit">@android:color/transparent</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="ActionBar.Composer" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:actionMenuTextColor">@color/color_secondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:actionMenuTextAppearance">@style/TextAppearance.ActionMenuItem</item>
    </style>

    <style name="PostButton">
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:paddingBottom">1dp</item>
    </style>

    <style name="PostButtonIcon">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="CommentsIndicator">
        <item name="android:layout_width">6dp</item>
        <item name="android:layout_height">6dp</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:layout_marginTop">7.5dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:background">@drawable/new_comments_indicator</item>
    </style>

    <style name="CommentTextAppearanceNormal" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CommentTextAppearanceFewEmoji" parent="CommentTextAppearanceNormal">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="CommentTextAppearanceRetracted" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="FlatCommentTextAppearanceRetracted" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="MediaPreviewAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in_medium</item>
        <item name="android:windowExitAnimation">@anim/fade_out_short</item>
    </style>

    <style name="TextAppearance.BottomNavigationView" parent="@style/TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">11sp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title"/>
    <style name="TextAppearance.Toolbar.Subtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle"/>

    <style name="TextAppearance.ActionBar.Title.Home" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="TextAppearance.ActionBar.Subtitle.Home" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.Toolbar.Title.Home" parent="TextAppearance.Toolbar.Title">
        <item name="android:textSize" tools:ignore="SpUsage">22dp</item>
    </style>

    <style name="TextAppearance.Toolbar.Title.Chat" parent="TextAppearance.Toolbar.Title">
        <item name="android:textSize" tools:ignore="SpUsage">18dp</item>
    </style>

    <style name="TextAppearance.Toolbar.Title.Composer" parent="TextAppearance.Toolbar.Title">
        <item name="android:textSize" tools:ignore="SpUsage">18dp</item>
    </style>

    <style name="TextAppearance.Toolbar.Subtitle.Chat" parent="TextAppearance.Toolbar.Subtitle">
        <item name="android:textSize" tools:ignore="SpUsage">14dp</item>
    </style>

    <style name="TextAppearance.Toolbar.Subtitle.Composer" parent="TextAppearance.Toolbar.Subtitle">
        <item name="android:textSize" tools:ignore="SpUsage">14dp</item>
    </style>

    <style name="TextAppearance.Toolbar.GroupFeed.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize" tools:ignore="SpUsage">17dp</item>
    </style>

    <style name="TextAppearance.ActionMenuItem" parent="">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/secondary_button_color_selector</item>
        <item name="actionMenuTextColor">@color/color_secondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="Widget.Button.Secondary" parent="Widget.Button">
        <item name="backgroundTint">@color/secondary_button_color_selector</item>
    </style>

    <style name="Widget.Button" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.Badge" parent="@style/Widget.MaterialComponents.Badge">
        <item name="backgroundColor">@color/color_primary</item>
    </style>

    <style name="Widget.ProgressBar.Horizontal" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:minHeight">24dp</item>
    </style>

    <style name="Theme.Seekbar.Draft" parent="AppTheme">
        <item name="colorAccent">@color/voice_draft_button</item>
        <item name="colorControlActivated">@color/voice_draft_button</item>
    </style>

    <style name="Theme.Seekbar.VoiceNotes" parent="AppTheme">
        <item name="colorAccent">@color/voice_draft_button</item>
        <item name="colorControlActivated">@color/voice_draft_button</item>
    </style>

    <style name="Widget.Seekbar.Draft" parent="">
        <item name="android:theme">@style/Theme.Seekbar.Draft</item>
    </style>

    <style name="VerificationSwitchTheme" parent="AppTheme">
        <item name="colorAccent">@color/color_secondary</item>
    </style>

</resources>
