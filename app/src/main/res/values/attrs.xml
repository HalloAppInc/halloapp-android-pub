<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CodeEditText">
        <attr name="cetBorderSize" format="dimension" />
        <attr name="cetBorderColor" format="color" />
        <attr name="cetCodeLength" format="integer" />
    </declare-styleable>

    <declare-styleable name="PostImageView">
        <attr name="pivCornerRadius" format="dimension" />
        <attr name="pivCornerColor" format="color" />
        <attr name="pivMaxAspectRatio" format="float" />
    </declare-styleable>

    <declare-styleable name="CropImageView">
        <attr name="civCornerRadius" format="dimension" />
        <attr name="civCornerColor" format="color" />
        <attr name="civGridSize" format="dimension" />
        <attr name="civGridColor" format="color" />
    </declare-styleable>

    <declare-styleable name="LimitingTextView">
        <attr name="ltvReadMore" format="string" />
        <attr name="ltvLimit" format="integer" />
        <attr name="ltvStep" format="integer" />
    </declare-styleable>

    <declare-styleable name="AvatarsLayout">
        <attr name="alPaddingSize" format="dimension" />
        <attr name="alPaddingColor" format="color" />
        <attr name="alElevation" format="dimension" />
        <attr name="alAvatarSize" format="dimension" />
    </declare-styleable>

</resources>
