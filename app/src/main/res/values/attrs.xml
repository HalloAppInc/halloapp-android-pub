<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CodeEditText">
        <attr name="cetBorderSize" format="dimension" />
        <attr name="cetBorderColor" format="color" />
        <attr name="cetCodeLength" format="integer" />
    </declare-styleable>

    <declare-styleable name="PostImageView">
        <attr name="pivCornerRadius" format="dimension" />
        <attr name="pivCornerColor" format="color" />
        <attr name="pivMaxAspectRatio" format="float" />
    </declare-styleable>

    <declare-styleable name="LimitingTextView">
        <attr name="ltvReadMore" format="string" />
        <attr name="ltvLimit" format="integer" />
        <attr name="ltvStep" format="integer" />
    </declare-styleable>
</resources>
