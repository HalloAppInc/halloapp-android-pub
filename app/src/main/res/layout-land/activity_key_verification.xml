<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.chat.chat.ChatActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="true">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/window_background"
            android:elevation="@dimen/action_bar_elevation"
            android:gravity="center_vertical"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:popupTheme="@style/ThemeOverlay.MaterialComponents"
            app:theme="@style/ThemeOverlay.MaterialComponents.ActionBar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/toolbar_text_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?selectableItemBackground"
                    android:paddingStart="1dp"
                    android:paddingEnd="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingStart="3dp"
                        android:paddingEnd="3dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textAppearance="@style/TextAppearance.Toolbar.Title.Chat"
                            android:text="@string/verify_safety_number"/>

                        <TextView
                            android:id="@+id/subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            tools:ignore="SpUsage"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textAppearance="@style/TextAppearance.Toolbar.Subtitle.Chat"
                            android:visibility="gone"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/qr_region"
                    android:layout_width="@dimen/qr_region_size"
                    android:layout_height="wrap_content"
                    android:layout_margin="35dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="@dimen/qr_region_size"
                        android:layout_height="@dimen/qr_region_size"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/avatar_circle"/>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/qr_guideline_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintGuide_percent="0.15"
                        android:orientation="vertical"/>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/qr_guideline_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintGuide_percent="0.85"
                        android:orientation="vertical"/>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/qr_guideline_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintGuide_percent="0.15"
                        android:orientation="horizontal"/>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/qr_guideline_bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintGuide_percent="0.85"
                        android:orientation="horizontal"/>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/text_guideline_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintGuide_percent="0.8"
                        android:orientation="horizontal"/>

                    <ImageView
                        android:id="@+id/qr_code"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="@id/qr_guideline_top"
                        app:layout_constraintBottom_toBottomOf="@id/qr_guideline_bottom"
                        app:layout_constraintStart_toStartOf="@id/qr_guideline_start"
                        app:layout_constraintEnd_toEndOf="@id/qr_guideline_end"
                        android:scaleType="fitCenter"
                        android:visibility="visible"
                        tools:src="@drawable/crop_add_button"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/text_guideline_top"
                        app:layout_constraintStart_toStartOf="@id/qr_guideline_start"
                        app:layout_constraintEnd_toEndOf="@id/qr_guideline_end"
                        android:maxLines="2"
                        android:gravity="center"
                        android:textColor="@color/black_70"
                        android:text="@string/key_verification_tap_to_scan"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                >

                <LinearLayout
                    android:id="@+id/safety_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <TextView
                    android:id="@+id/explanation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    tools:text="@string/key_verification_explanation"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/verified_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="@string/key_verification_switch_label"/>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/verified_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/VerificationSwitchTheme"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>
