<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/recording_ui_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-56dp"
        android:layout_gravity="bottom">

        <FrameLayout
            android:id="@+id/voice_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="160dp"
            android:layout_gravity="center_vertical|end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textSize="18sp"
                android:paddingBottom="1dp"
                android:text="@string/slide_to_cancel"
                android:textColor="@color/white_80"/>

        </FrameLayout>

        <ImageView
            android:id="@+id/arrow_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_voice_arrow_cancel"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="114dp"
            app:tint="#666666"/>

        <View
            android:id="@+id/touch_circle"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:backgroundTint="#4Dfed3d3"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="-23dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/bg_circle"/>

    </FrameLayout>

</merge>
