<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.chat.ChatActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/window_background"
                android:elevation="@dimen/action_bar_elevation"
                android:gravity="center_vertical"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                app:contentInsetStartWithNavigation="0dp"
                app:popupTheme="@style/ThemeOverlay.MaterialComponents"
                app:theme="@style/ThemeOverlay.MaterialComponents.ActionBar">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/toolbar_text_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?selectableItemBackground"
                        android:paddingStart="1dp"
                        android:paddingEnd="1dp">

                        <FrameLayout
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_vertical">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/avatar"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_gravity="center"
                                android:src="@drawable/avatar_person" />

                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingStart="3dp"
                            android:paddingEnd="3dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:textAppearance="@style/TextAppearance.Toolbar.Title.Chat"
                                tools:text="Clark Chen"/>

                            <TextView
                                android:id="@+id/subtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14dp"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:textAppearance="@style/TextAppearance.Toolbar.Subtitle.Chat"
                                android:visibility="gone"/>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </androidx.appcompat.widget.Toolbar>

            <FrameLayout
                android:id="@+id/chat_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                app:layout_constraintBottom_toTopOf="@id/footer">

                <androidx.coordinatorlayout.widget.CoordinatorLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/chat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintBottom_toTopOf="@+id/footer"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:elevation="2dp"
                        android:clipToPadding="false"/>

                </androidx.coordinatorlayout.widget.CoordinatorLayout>

                <ImageView
                    android:id="@+id/scroll_to_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_gravity="bottom|end"
                    android:layout_marginBottom="20dp"
                    android:layout_marginEnd="20dp"
                    app:tint="@color/primary_text"
                    android:src="@drawable/ic_scroll_down"
                    android:visibility="gone"
                    android:background="@drawable/bg_scroll_down"/>

                <TextView
                    android:id="@+id/new_messages"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_margin="8dp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:textColor="@android:color/white"
                    android:background="@drawable/new_posts_indicator_background"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/new_messages"
                    android:visibility="gone"
                    tools:visibility="visible"/>

                <com.halloapp.ui.mentions.MentionPickerView
                    android:id="@+id/mention_picker_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible"/>

            </FrameLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/card_background"
                android:paddingTop="1dp"
                android:paddingBottom="2dp"
                android:elevation="3dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chat_container"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/reply_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:paddingStart="18dp"
                    android:paddingEnd="0dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/reply_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textAppearance="?textAppearanceListItem"
                        android:fontFamily="sans-serif-medium"
                        android:textDirection="locale"
                        android:textAlignment="gravity"
                        android:paddingStart="2dp"
                        android:paddingEnd="2dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/reply_media_thumb"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/reply_text"
                        app:layout_constraintVertical_chainStyle="packed"
                        tools:text="Ded Pihtov"/>

                    <ImageView
                        android:id="@+id/reply_media_icon"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="6dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="2dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/reply_text"
                        app:layout_constraintTop_toTopOf="@+id/reply_text"
                        app:layout_constraintBottom_toBottomOf="@+id/reply_text"
                        app:tint="?android:textColorSecondary"
                        tools:src="@drawable/ic_camera"/>

                    <TextView
                        android:id="@+id/reply_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textDirection="locale"
                        android:textAlignment="gravity"
                        app:layout_constraintStart_toEndOf="@+id/reply_media_icon"
                        app:layout_constraintEnd_toStartOf="@+id/reply_media_thumb"
                        app:layout_constraintTop_toBottomOf="@+id/reply_name"
                        app:layout_constraintBottom_toBottomOf="parent"
                        tools:text="Have a nice day"/>

                    <ImageView
                        android:id="@+id/reply_media_thumb"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:scaleType="centerCrop"
                        app:layout_constraintStart_toEndOf="@+id/reply_name"
                        app:layout_constraintEnd_toStartOf="@+id/reply_close"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        tools:src="@drawable/avatar_person"/>

                    <ImageView
                        android:id="@+id/reply_close"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:paddingBottom="16dp"
                        android:src="@drawable/ic_close"
                        app:layout_constraintStart_toEndOf="@+id/reply_media_thumb"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.halloapp.widget.MentionableEntry
                    android:id="@+id/entry_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"
                    android:background="@null"
                    android:hint="@string/type_a_message_hint"
                    android:importantForAutofill="no"
                    android:inputType="textCapSentences|textMultiLine"
                    android:maxLines="6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/media"
                    app:layout_constraintTop_toBottomOf="@+id/reply_container"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageButton
                    android:id="@+id/media"
                    style="?actionButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_media_collection"
                    android:contentDescription="@string/pick_media"
                    app:layout_constraintVertical_bias="1.0"
                    app:layout_constraintTop_toBottomOf="@+id/reply_container"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/send"
                    app:layout_constraintStart_toEndOf="@+id/entry_card"/>

                <ImageButton
                    android:id="@+id/send"
                    style="?actionButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_send"
                    android:contentDescription="@string/send"
                    android:visibility="invisible"
                    app:layout_constraintVertical_bias="1.0"
                    app:layout_constraintTop_toBottomOf="@+id/reply_container"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/media" />

                <ImageButton
                    android:id="@+id/record_voice"
                    style="?actionButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_keyboard_voice"
                    android:contentDescription="@string/send"
                    app:tint="@color/color_secondary"
                    app:layout_constraintVertical_bias="1.0"
                    app:layout_constraintTop_toBottomOf="@+id/reply_container"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/media" />

                <TextView
                    android:id="@+id/recording_time"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_primary"
                    android:textSize="21sp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    app:layout_constraintStart_toStartOf="@id/entry_card"
                    app:layout_constraintTop_toTopOf="@id/record_voice"
                    app:layout_constraintBottom_toBottomOf="@id/record_voice"
                    tools:text="00:01"/>

                <TextView
                    android:id="@+id/cancel_voice_note"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/send"
                    app:layout_constraintBottom_toBottomOf="@id/send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:background="?selectableItemBackground"
                    android:textColor="@color/color_secondary"
                    android:text="@string/cancel"/>

                <ImageButton
                    android:id="@+id/delete_voice_draft"
                    style="?actionButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_delete"
                    android:contentDescription="@string/send"
                    app:tint="@color/color_primary"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/reply_container"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <LinearLayout
                    android:id="@+id/voice_draft_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_voice_draft"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:visibility="gone"
                    app:layout_constraintStart_toEndOf="@id/delete_voice_draft"
                    app:layout_constraintEnd_toStartOf="@id/send"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/reply_container">

                    <ImageView
                        android:id="@+id/control_btn"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        app:layout_constraintStart_toEndOf="@id/ptt_avatar"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:tint="@color/voice_draft_button"
                        android:src="@drawable/ic_play_arrow"/>

                    <androidx.appcompat.widget.AppCompatSeekBar
                        style="@style/Widget.Seekbar.Draft"
                        android:id="@+id/voice_note_seekbar"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingStart="10dp"/>

                    <TextView
                        android:id="@+id/seek_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:paddingEnd="7dp"
                        android:paddingBottom="2dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/voice_draft_button"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@id/voice_note_seekbar"
                        android:textSize="12sp"
                        tools:text="0:03"/>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <com.halloapp.widget.VoiceNoteRecorderControlView
            android:id="@+id/recording_ui"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_gravity="bottom|end"/>

    </FrameLayout>

    <com.halloapp.widget.DrawDelegateView
        android:id="@+id/draw_delegate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>
