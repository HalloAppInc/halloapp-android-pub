<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.chat.chat.ChatActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include layout="@layout/call_toolbar" />

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/window_background"
                    android:elevation="@dimen/action_bar_elevation"
                    android:gravity="center_vertical"
                    app:contentInsetLeft="0dp"
                    app:contentInsetStart="0dp"
                    app:contentInsetStartWithNavigation="0dp"
                    app:popupTheme="@style/ActionBar.PopupTheme"
                    app:theme="@style/ThemeOverlay.MaterialComponents.ActionBar">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/back"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_arrow_back"
                            style="@android:style/Widget.Material.Toolbar.Button.Navigation"
                            app:tint="?android:attr/textColorSecondary"
                            android:layout_gravity="center_vertical"
                            />

                        <LinearLayout
                            android:id="@+id/toolbar_text_container"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="?selectableItemBackground">

                            <FrameLayout
                                android:layout_width="36dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center_vertical">

                                <com.google.android.material.imageview.ShapeableImageView
                                    app:shapeAppearance="@style/CircularImageView"
                                    android:id="@+id/avatar"
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/avatar_person" />

                            </FrameLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:paddingStart="6dp"
                                android:paddingEnd="3dp"
                                android:gravity="center_vertical">

                                <TextView
                                    android:id="@+id/title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:textAppearance="@style/TextAppearance.Toolbar.Title.Chat"
                                    tools:text="Clark Chen"/>

                                <TextView
                                    android:id="@+id/subtitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14dp"
                                    tools:ignore="SpUsage"
                                    android:ellipsize="marquee"
                                    android:textAppearance="@style/TextAppearance.Toolbar.Subtitle.Chat"
                                    android:visibility="gone"
                                    android:singleLine="true" />

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </androidx.appcompat.widget.Toolbar>

                <FrameLayout
                    android:id="@+id/chat_container"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:layout_constraintTop_toBottomOf="@id/toolbar"
                    app:layout_constraintBottom_toTopOf="@id/footer">

                    <androidx.coordinatorlayout.widget.CoordinatorLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/chat"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:layout_constraintBottom_toTopOf="@+id/footer"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:elevation="2dp"
                            android:clipToPadding="false"/>

                    </androidx.coordinatorlayout.widget.CoordinatorLayout>

                    <ImageView
                        android:id="@+id/scroll_to_bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:layout_gravity="bottom|end"
                        android:layout_marginBottom="20dp"
                        android:layout_marginEnd="20dp"
                        app:tint="@color/primary_text"
                        android:src="@drawable/ic_scroll_down"
                        android:visibility="gone"
                        android:background="@drawable/bg_scroll_down"/>

                    <TextView
                        android:id="@+id/new_messages"
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:layout_margin="8dp"
                        android:layout_gravity="center_horizontal|bottom"
                        android:textColor="@android:color/white"
                        android:background="@drawable/new_posts_indicator_background"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"
                        android:paddingStart="24dp"
                        android:paddingEnd="24dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="@string/new_messages"
                        android:visibility="gone"
                        tools:visibility="visible"/>

                    <com.halloapp.ui.mentions.MentionPickerView
                        android:id="@+id/mention_picker_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="invisible"/>

                </FrameLayout>

                <LinearLayout
                    android:id="@+id/unknown_friend_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:background="@color/window_background">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/home_navigation_divider"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/not_friend_alert"
                        android:textSize="14sp"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/primary_text"
                        android:layout_marginBottom="10dp"
                        />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/unknown_add_friend"
                        style="@style/Widget.Button.Secondary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:letterSpacing=".02"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_marginStart="80dp"
                        android:layout_marginEnd="80dp"
                        app:cornerRadius="10dp"
                        android:text="@string/add_as_friend"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/unknown_block"
                        style="@style/Widget.Button.TextOnly"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:letterSpacing=".02"
                        android:layout_marginTop="2dp"
                        app:cornerRadius="10dp"
                        android:layout_marginStart="80dp"
                        android:layout_marginEnd="80dp"
                        android:layout_marginBottom="8dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/color_primary"
                        android:text="@string/block"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/footer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.halloapp.widget.ChatInputView
                        android:id="@+id/entry_view"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/chat_container"
                        app:layout_constraintEnd_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:elevation="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

            <com.halloapp.widget.VoiceNoteRecorderControlView
                android:id="@+id/recording_ui"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:layout_gravity="bottom|end"/>

        </FrameLayout>

        <com.halloapp.emoji.EmojiKeyboardLayout
            android:id="@+id/emoji_keyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <View
        android:id="@+id/darken_screen"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/selected_message_overlay"
        android:visibility="invisible"/>

    <com.halloapp.widget.DrawDelegateView
        android:id="@+id/draw_delegate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>
