<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.chat.ChatActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/window_background"
                android:elevation="@dimen/action_bar_elevation"
                android:gravity="center_vertical"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                app:contentInsetStartWithNavigation="0dp"
                app:popupTheme="@style/ThemeOverlay.MaterialComponents"
                app:theme="@style/ThemeOverlay.MaterialComponents.ActionBar">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/toolbar_text_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?selectableItemBackground"
                        android:paddingStart="1dp"
                        android:paddingEnd="1dp">

                        <FrameLayout
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_vertical">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/avatar"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_gravity="center"
                                android:src="@drawable/avatar_person" />

                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingStart="3dp"
                            android:paddingEnd="3dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:textAppearance="@style/TextAppearance.Toolbar.Title.Chat"
                                tools:text="Clark Chen"/>

                            <TextView
                                android:id="@+id/subtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14dp"
                                tools:ignore="SpUsage"
                                android:ellipsize="marquee"
                                android:textAppearance="@style/TextAppearance.Toolbar.Subtitle.Chat"
                                android:visibility="gone"
                                android:singleLine="true" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </androidx.appcompat.widget.Toolbar>

            <FrameLayout
                android:id="@+id/chat_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                app:layout_constraintBottom_toTopOf="@id/footer">

                <androidx.coordinatorlayout.widget.CoordinatorLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/chat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintBottom_toTopOf="@+id/footer"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:elevation="2dp"
                        android:clipToPadding="false"/>

                </androidx.coordinatorlayout.widget.CoordinatorLayout>

                <ImageView
                    android:id="@+id/scroll_to_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_gravity="bottom|end"
                    android:layout_marginBottom="20dp"
                    android:layout_marginEnd="20dp"
                    app:tint="@color/primary_text"
                    android:src="@drawable/ic_scroll_down"
                    android:visibility="gone"
                    android:background="@drawable/bg_scroll_down"/>

                <TextView
                    android:id="@+id/new_messages"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_margin="8dp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:textColor="@android:color/white"
                    android:background="@drawable/new_posts_indicator_background"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/new_messages"
                    android:visibility="gone"
                    tools:visibility="visible"/>

                <com.halloapp.ui.mentions.MentionPickerView
                    android:id="@+id/mention_picker_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible"/>

            </FrameLayout>

            <LinearLayout
                android:id="@+id/footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_reply_preview"
                    android:elevation="3dp">

                    <FrameLayout
                        android:id="@+id/reply_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginTop="3dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/reply_preview_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="18dp"
                            android:paddingEnd="0dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:layout_margin="8dp"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/reply_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:ellipsize="end"
                                android:textAppearance="?textAppearanceListItem"
                                android:fontFamily="sans-serif-medium"
                                android:textDirection="locale"
                                android:textAlignment="gravity"
                                android:paddingStart="2dp"
                                android:paddingEnd="2dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/reply_media_thumb"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toTopOf="@+id/reply_text"
                                app:layout_constraintVertical_chainStyle="packed"
                                tools:text="Ded Pihtov"/>

                            <ImageView
                                android:id="@+id/reply_media_icon"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginEnd="6dp"
                                android:layout_marginTop="2dp"
                                android:layout_marginStart="2dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/reply_text"
                                app:layout_constraintTop_toTopOf="@+id/reply_text"
                                app:layout_constraintBottom_toBottomOf="@+id/reply_text"
                                app:tint="?android:textColorSecondary"
                                tools:src="@drawable/ic_camera"/>

                            <TextView
                                android:id="@+id/reply_text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:textDirection="locale"
                                android:textAlignment="gravity"
                                app:layout_constraintStart_toEndOf="@+id/reply_media_icon"
                                app:layout_constraintEnd_toStartOf="@+id/reply_media_thumb"
                                app:layout_constraintTop_toBottomOf="@+id/reply_name"
                                app:layout_constraintBottom_toBottomOf="parent"
                                tools:text="Have a nice day"/>

                            <ImageView
                                android:id="@+id/reply_media_thumb"
                                android:layout_width="52dp"
                                android:layout_height="52dp"
                                android:scaleType="centerCrop"
                                app:layout_constraintStart_toEndOf="@+id/reply_name"
                                app:layout_constraintEnd_toStartOf="@+id/reply_close"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                tools:src="@drawable/avatar_person"/>

                            <ImageView
                                android:id="@+id/reply_close"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:paddingBottom="16dp"
                                android:src="@drawable/ic_close"
                                app:layout_constraintStart_toEndOf="@+id/reply_media_thumb"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </FrameLayout>

                    <com.halloapp.widget.LinkPreviewComposeView
                        android:id="@+id/link_preview_compose_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:elevation="3dp"
                        android:layout_marginTop="3dp"/>

                </LinearLayout>

                <com.halloapp.widget.ChatInputView
                    android:id="@+id/entry_view"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/chat_container"
                    app:layout_constraintEnd_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:elevation="3dp"
                    android:background="@color/chat_entry_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <com.halloapp.widget.VoiceNoteRecorderControlView
            android:id="@+id/recording_ui"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_gravity="bottom|end"/>

    </FrameLayout>

    <com.halloapp.widget.DrawDelegateView
        android:id="@+id/draw_delegate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>
