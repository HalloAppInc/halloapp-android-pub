<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/external_share_image_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/post_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/share_footer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constrainedHeight="true"
        app:layout_constraintHeight_default="wrap"
        android:orientation="vertical">
    </FrameLayout>

    <LinearLayout
        android:id="@+id/share_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <TextView
            android:id="@+id/share_footer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/white_50"
            android:gravity="center_horizontal"
            android:lineSpacingMultiplier="1.3"
            tools:text="Posted from HalloApp\nhalloapp.com"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
