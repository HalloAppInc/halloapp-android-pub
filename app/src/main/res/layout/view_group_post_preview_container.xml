<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:foreground="?selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card"
        android:layout_width="@dimen/groups_v2_card_width"
        android:layout_height="@dimen/groups_v2_card_height"
        android:background="@color/card_background"
        android:elevation="1.5dp"
        >

        <TextView
            android:id="@+id/preview_text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/comment_bar"
            android:gravity="center_vertical"
            android:textColor="@color/group_post_card_text"
            android:textSize="@dimen/groups_v2_text_size"
            android:autoLink="web"
            android:linksClickable="false"
            android:layout_marginEnd="13dp"
            android:layout_marginStart="16dp"
            android:ellipsize="end"
            android:maxLines="5"
            android:lineSpacingMultiplier="1.1"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="omg do you guys remember these epic music videos from Rammstein? httpsd asf;lkja;sldkjf;lkjasdasdfasdff;lk jasd;lfk jas;ldkj as;ldkfj a;lsdk://youtu.be/StZcUAPRRac"/>

        <ImageView
            android:id="@+id/preview_image"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="match_parent"/>

        <View
            android:id="@+id/top_protection_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/name_bar"
            app:layout_constraintBottom_toBottomOf="@id/name_bar"
            android:background="@color/black_30"/>

        <FrameLayout
            android:id="@+id/name_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingHorizontal="13dp"
            android:paddingVertical="5dp"
            android:background="@color/group_post_preview_protection_bar">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Clark Chen"
                android:textSize="15sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"/>

        </FrameLayout>

        <ImageView
            android:id="@+id/media_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginHorizontal="6dp"
            android:layout_marginBottom="6dp"
            android:scaleType="center"
            android:elevation="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/comment_bar"
            />

        <LinearLayout
            android:id="@+id/voice_note_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical"
            android:visibility="gone"
            android:clickable="false"
            android:focusable="false"
            app:layout_constraintTop_toBottomOf="@id/name_bar"
            app:layout_constraintBottom_toTopOf="@id/comment_bar">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/voice_note_avatar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="18dp"
                    android:layout_marginBottom="2dp"
                    app:shapeAppearance="@style/CircularImageView"
                    android:src="@drawable/avatar_person"/>

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="4dp"
                    android:layout_gravity="bottom|end"
                    android:background="@drawable/bg_circle"
                    android:backgroundTint="@color/color_secondary"
                    app:tint="@color/white"
                    android:src="@drawable/ic_keyboard_voice"/>

            </FrameLayout>

            <TextView
                android:id="@+id/seek_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:paddingHorizontal="2dp"
                android:fontFamily="sans-serif-medium"
                tools:text="0:06"/>

        </LinearLayout>

        <View
            android:id="@+id/bottom_protection_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/comment_bar"
            app:layout_constraintBottom_toBottomOf="@id/comment_bar"
            android:background="@color/black_30"/>

        <LinearLayout
            android:id="@+id/comment_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="13dp"
            android:paddingVertical="5dp"
            android:background="@color/group_post_preview_protection_bar"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:paddingBottom="1dp"
                android:layout_gravity="center_vertical"
                android:fontFamily="sans-serif-medium"
                android:text="@string/comment"/>

            <View
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="6dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/new_comments_indicator"
                android:id="@+id/comments_indicator" />

        </LinearLayout>

        <TextView
            android:id="@+id/new_indicator"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_new_pill"
            android:paddingHorizontal="6dp"
            android:paddingBottom="3dp"
            app:layout_constraintTop_toBottomOf="@id/name_bar"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:textAllCaps="false"
            android:visibility="gone"
            android:text="@string/new_lowercase"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
