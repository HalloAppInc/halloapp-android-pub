<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:clipChildren="false"
    android:background="@color/window_background"
    android:fitsSystemWindows="true"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.MaterialComponents"/>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/media_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipChildren="false"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/text_entry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <com.halloapp.widget.ContentComposerScrollView
            android:id="@+id/media_vertical_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:layout_gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="8dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        app:shapeAppearance="@style/CircularImageView"
                        android:id="@+id/avatar"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:padding="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        tools:src="@color/color_primary_dark"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@id/avatar"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toTopOf="@id/time_container"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@color/primary_text"
                            android:textSize="16sp"
                            tools:text="Clark Chen"
                            />

                        <LinearLayout
                            android:id="@+id/time_container"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@id/avatar"
                            app:layout_constraintTop_toBottomOf="@id/name"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintVertical_chainStyle="packed"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:id="@+id/time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/secondary_text"
                                tools:text="9:03"/>

                            <TextView
                                android:id="@+id/decrypt_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingEnd="12dp"
                                android:paddingStart="0dp"
                                android:textColor="#19C253"
                                android:textSize="10sp"
                                tools:text="11:49 PM"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/moment_corner_radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/image_container"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintDimensionRatio="1:1"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/image_first"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:scaleType="centerCrop"
                                tools:src="@mipmap/ic_launcher" />

                            <ImageView
                                android:id="@+id/image_second"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:scaleType="centerCrop"
                                tools:src="@mipmap/ic_launcher" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/moment_cover"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="@id/image_container"
                            app:layout_constraintBottom_toBottomOf="@id/image_container"
                            android:background="@drawable/bg_moment_overlay"/>

                        <ProgressBar
                            android:id="@+id/download_progress"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:indeterminateDuration="1500"
                            android:visibility="gone"
                            android:indeterminateDrawable="@drawable/thick_moments_spinner" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/line_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginBottom="22dp"
                        android:layout_marginTop="12dp"
                        android:gravity="end"
                        android:maxLines="1"
                        android:textAllCaps="true"
                        android:textColor="@color/secondary_text"
                        android:textSize="26sp"
                        style="@style/MomentFont"
                        tools:text="Monday" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

                <com.halloapp.widget.AvatarsLayout
                    android:id="@+id/seen_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="end|bottom"
                    android:paddingTop="10dp"
                    android:paddingBottom="8dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    app:alPaddingColor="@color/window_background"
                    app:alPaddingSize="1dp"
                    app:alElevation="0dp"
                    app:alAvatarSize="27dp"
                    android:visibility="invisible"
                    tools:visibility="visible"/>

            </LinearLayout>

        </com.halloapp.widget.ContentComposerScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.halloapp.widget.BaseInputView
        android:id="@+id/text_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/emoji_keyboard"
        />

    <com.halloapp.widget.VoiceNoteRecorderControlView
        android:id="@+id/recording_ui"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        android:elevation="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/emoji_keyboard"
        android:layout_gravity="bottom|end"/>

    <com.halloapp.emoji.EmojiKeyboardLayout
        android:id="@+id/emoji_keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <LinearLayout
        android:id="@+id/uploading_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible"
        android:clipToPadding="false"
        android:paddingBottom="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="10dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:paddingBottom="10dp"
                android:orientation="vertical">

                <com.halloapp.widget.ContentPhotoView
                    android:id="@+id/uploading_moment_image"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    app:layout_constraintDimensionRatio="1:1"
                    app:contentPvBorderColor="@color/media_content_outline"
                    app:contentPvCornerRadius="4dp"
                    tools:src="@mipmap/ic_launcher" />

                <FrameLayout
                    android:id="@+id/uploading_cover"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@color/black_40"
                    app:layout_constraintTop_toTopOf="@id/uploading_moment_image"
                    app:layout_constraintStart_toStartOf="@id/uploading_moment_image"
                    app:layout_constraintEnd_toEndOf="@id/uploading_moment_image"
                    app:layout_constraintBottom_toBottomOf="@id/uploading_moment_image">

                    <ProgressBar
                        android:id="@+id/uploaded_progress"
                        android:layout_gravity="center"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:indeterminateDuration="1500"
                        android:indeterminateDrawable="@drawable/thick_moments_spinner" />

                    <ImageView
                        android:id="@+id/uploaded_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:src="@drawable/ic_moments_uploaded_check"/>

                </FrameLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
