<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <include
        layout="@layout/comment_item_header"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clipChildren="false"
        android:clipToPadding="false">

        <com.halloapp.widget.MessageBubbleLinearLayout
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="64dp"
            android:background="@drawable/message_background_incoming"
            android:paddingTop="4dp"
            android:orientation="vertical">

            <include layout="@layout/message_sender_info" />

            <FrameLayout
                android:id="@+id/reply_container"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginTop="4dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/show_comment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/control_btn"
                    app:layout_constraintBottom_toTopOf="@id/voice_note_seekbar"
                    android:paddingTop="1dp"
                    android:paddingStart="1dp"
                    android:paddingEnd="14dp"
                    android:textAppearance="?textAppearanceListItemSmall"
                    android:textSize="@dimen/message_text_size"
                    android:visibility="gone"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="0dp"
                    android:text="@string/blocked_user_hidden_text"
                    android:textColor="@color/show_comment" />

                <ImageView
                    android:id="@+id/control_btn"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="6dp"
                    app:layout_constraintStart_toEndOf="@id/show_comment"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:tint="@color/color_secondary"
                    android:src="@drawable/ic_play_arrow"/>

                <ProgressBar
                    android:id="@+id/loading"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    app:layout_constraintStart_toStartOf="@id/control_btn"
                    app:layout_constraintEnd_toEndOf="@id/control_btn"
                    app:layout_constraintTop_toTopOf="@id/control_btn"
                    app:layout_constraintBottom_toBottomOf="@id/control_btn"/>

                <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/voice_note_seekbar"
                    android:layout_width="172dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="12dp"
                    android:progressDrawable="@drawable/voice_note_seekbar"
                    app:layout_constraintTop_toTopOf="@id/control_btn"
                    app:layout_constraintBottom_toBottomOf="@id/control_btn"
                    app:layout_constraintStart_toEndOf="@id/control_btn"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/seek_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:paddingEnd="7dp"
                    android:layout_marginBottom="6dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/secondary_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/voice_note_seekbar"
                    android:textSize="11sp"
                    tools:text="0:03"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="@id/seek_time"
                    app:layout_constraintEnd_toEndOf="parent"
                    >

                    <TextView
                        android:id="@+id/timestamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/secondary_text"
                        android:textSize="11sp"
                        tools:text="11:49 PM"/>

                    <TextView
                        android:id="@+id/decrypt_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="12dp"
                        android:paddingStart="0dp"
                        android:textColor="#19C253"
                        android:textSize="10sp"
                        tools:text="11:49 PM"/>

                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.halloapp.widget.MessageBubbleLinearLayout>
    </FrameLayout>
</LinearLayout>
