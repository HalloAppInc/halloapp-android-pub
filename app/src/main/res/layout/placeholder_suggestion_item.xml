<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/rounded_entry_suggestion_bg"
    android:layout_marginVertical="5dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/thumbnail"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        app:shapeAppearance="@style/RoundedAppearanceThumbnail"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_suggestion_image" />

    <ProgressBar
        android:id="@+id/title"
        style="@style/Widget.ProgressBar.Horizontal"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:scaleY="3"
        app:layout_constraintStart_toEndOf="@id/thumbnail"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/first_suggestion_text"
        android:layout_marginStart="10dp"
        android:indeterminate="true"
        android:indeterminateTint="@color/black_5" />

    <ProgressBar
        android:id="@+id/first_suggestion_text"
        style="@style/Widget.ProgressBar.Horizontal"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/thumbnail"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toBottomOf="@id/second_suggestion_text"
        android:layout_marginStart="10dp"
        android:scaleY="2"
        android:indeterminate="true"
        android:indeterminateTint="@color/black_5" />

    <ProgressBar
        android:id="@+id/second_suggestion_text"
        style="@style/Widget.ProgressBar.Horizontal"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/thumbnail"
        app:layout_constraintTop_toBottomOf="@id/first_suggestion_text"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="10dp"
        android:scaleY="2"
        android:indeterminate="true"
        android:indeterminateTint="@color/black_5" />

</androidx.constraintlayout.widget.ConstraintLayout>
