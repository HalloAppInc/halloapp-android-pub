<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="166dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_invite_card"
    android:elevation="2dp"
    android:padding="8dp">

    <ImageView
        android:id="@+id/invite_avatar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="22dp"
        android:src="@drawable/ic_search"
        android:background="@drawable/bg_circle"
        android:backgroundTint="@color/default_avatar_bg"
        app:tint="@color/default_avatar_color"
        android:padding="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/invite_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lines="3"
        android:textSize="16sp"
        android:lineSpacingMultiplier="1.2"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/primary_text"
        android:layout_marginTop="6dp"
        android:text="@string/invite_card_search_text"
        app:layout_constraintBottom_toTopOf="@id/search_button"
        app:layout_constraintTop_toBottomOf="@id/invite_avatar"/>

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.Button.Secondary"
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cornerRadius="50dp"
        android:text="@string/search"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
