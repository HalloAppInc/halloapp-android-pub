<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/card_background"
            android:layout_marginBottom="25dp"
            android:elevation="1dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/profile_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="?selectableItemBackground"
                android:paddingBottom="10dp"
                android:gravity="center_horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    app:shapeAppearance="@style/CircularImageView"
                    android:id="@+id/avatar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/avatar_person" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="20sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    app:layout_constraintStart_toEndOf="@id/avatar"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/username"
                    tools:text="Ded Pihtov" />

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/tertiary_text"
                    app:layout_constraintStart_toEndOf="@id/avatar"
                    app:layout_constraintTop_toBottomOf="@id/name"
                    tools:text="\@username"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/username">

                    <Button
                        android:id="@+id/social_media_empty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_entry_friendship_bg"
                        android:minHeight="0dp"
                        android:stateListAnimator="@null"
                        android:text="@string/add_my_social_media"
                        android:textAllCaps="false"
                        android:textColor="@color/favorites_dialog_blue"
                        app:backgroundTint="@color/black_10"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/social_media"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:visibility="gone">

                        <ImageButton
                            android:id="@+id/instagram"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/bg_circle"
                            android:padding="12dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_instagram"
                            android:visibility="gone"
                            app:backgroundTint="@color/black_10"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/x_twitter"
                            app:layout_constraintHorizontal_chainStyle="packed"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/favorites_dialog_blue" />

                        <ImageButton
                            android:id="@+id/x_twitter"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/bg_circle"
                            android:padding="12dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_twitter_x"
                            app:backgroundTint="@color/black_10"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/tiktok"
                            app:layout_constraintStart_toEndOf="@id/instagram"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/favorites_dialog_blue" />

                        <ImageButton
                            android:id="@+id/tiktok"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/bg_circle"
                            android:padding="12dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_tiktok"
                            app:backgroundTint="@color/black_10"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/youtube"
                            app:layout_constraintStart_toEndOf="@id/x_twitter"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/favorites_dialog_blue" />

                        <ImageButton
                            android:id="@+id/youtube"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/bg_circle"
                            android:padding="12dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_youtube"
                            app:backgroundTint="@color/black_10"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/user_link"
                            app:layout_constraintStart_toEndOf="@id/tiktok"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/favorites_dialog_blue" />

                        <ImageButton
                            android:id="@+id/user_link"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/bg_circle"
                            android:padding="10dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_link"
                            app:backgroundTint="@color/black_10"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/social_media_add"
                            app:layout_constraintStart_toEndOf="@id/youtube"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/favorites_dialog_blue" />

                        <ImageButton
                            android:id="@+id/social_media_add"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/bg_circle"
                            android:padding="12dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_attach_plus"
                            app:backgroundTint="@color/black_10"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/user_link"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/favorites_dialog_blue" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/window_background"/>

            <LinearLayout
                android:id="@+id/my_posts"
                android:layout_width="match_parent"
                android:layout_height="52sp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:gravity="center_vertical"
                android:background="?selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="18dp"
                    android:layout_marginStart="20dp"
                    android:scaleType="center"
                    app:tint="@color/profile_icon_color"
                    android:src="@drawable/ic_profile_my_posts"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/primary_text"
                    android:text="@string/my_posts" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/my_friends"
                android:layout_width="match_parent"
                android:layout_height="52sp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:gravity="center_vertical"
                android:background="?selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="18dp"
                    android:layout_marginStart="20dp"
                    android:scaleType="center"
                    app:tint="@color/profile_icon_color"
                    android:src="@drawable/ic_profile_my_contacts"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/primary_text"
                    android:text="@string/friends" />

                <TextView
                    android:id="@+id/friend_requests_count"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/color_bg_circle"
                    android:backgroundTint="@color/favorites_dialog_blue"
                    android:layout_marginStart="10dp"
                    tools:text="4"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/favorites"
                android:layout_width="match_parent"
                android:layout_height="52sp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:gravity="center_vertical"
                android:background="?selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="18dp"
                    android:layout_marginStart="20dp"
                    android:scaleType="center"
                    app:tint="@color/profile_icon_color"
                    android:src="@drawable/ic_my_profile_favorites"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/primary_text"
                    android:text="@string/contact_favorites" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/window_background"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/name"
            android:background="@color/card_background"
            android:elevation="1dp"
            android:layout_marginBottom="25dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/settings"
                android:layout_width="match_parent"
                android:layout_height="52sp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:gravity="center_vertical"
                android:background="?selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="18dp"
                    android:layout_marginStart="20dp"
                    android:scaleType="center"
                    app:tint="@color/profile_icon_color"
                    android:src="@drawable/ic_my_profile_settings"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/primary_text"
                    android:text="@string/settings" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/help"
                android:layout_width="match_parent"
                android:layout_height="52sp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:gravity="center_vertical"
                android:background="?selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="18dp"
                    android:layout_marginStart="20dp"
                    android:scaleType="center"
                    app:tint="@color/profile_icon_color"
                    android:src="@drawable/ic_my_profile_help"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/primary_text"
                    android:text="@string/help" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/invite"
                android:layout_width="match_parent"
                android:layout_height="52sp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:gravity="center_vertical"
                android:background="?selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="18dp"
                    android:layout_marginStart="20dp"
                    android:scaleType="center"
                    app:tint="@color/profile_icon_color"
                    android:src="@drawable/ic_my_profile_invite"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/primary_text"
                    android:text="@string/invite_title" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="52sp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:gravity="center_vertical"
                android:background="?selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="18dp"
                    android:layout_marginStart="20dp"
                    android:scaleType="center"
                    app:tint="@color/profile_icon_color"
                    android:src="@drawable/ic_my_profile_about"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/primary_text"
                    android:text="@string/about" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>
