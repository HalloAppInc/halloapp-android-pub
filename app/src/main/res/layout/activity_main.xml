<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <include
            layout="@layout/toolbar_with_network_indicator"
            android:id="@+id/toolbar_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/nav_host_fragment"/>

        <fragment
            android:id="@+id/nav_host_fragment"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:defaultNavHost="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_container"
            app:layout_constraintBottom_toTopOf="@+id/nav_separator"
            app:navGraph="@navigation/mobile_navigation" />

        <View
            android:id="@+id/nav_separator"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/home_navigation_divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/nav_view"/>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/nav_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            app:elevation="0dp"
            android:background="?android:attr/windowBackground"
            app:itemIconTint="@drawable/nav_item_foreground"
            app:itemTextColor="@drawable/nav_item_foreground"
            app:layout_constraintStart_toStartOf="parent"
            app:labelVisibilityMode="labeled"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:itemTextAppearanceActive="@style/TextAppearance.BottomNavigationView"
            app:itemTextAppearanceInactive="@style/TextAppearance.BottomNavigationView"
            app:itemRippleColor="@color/bottom_nav_ripple"
            app:menu="@menu/bottom_nav_menu" />

        <FrameLayout
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/window_background"
            android:elevation="6dp"/>

        <View
            android:id="@+id/fab_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_fab_open_overlay"
            android:visibility="gone"
            android:elevation="4dp"/>

        <com.halloapp.widget.HACustomFab
            android:id="@+id/ha_fab"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="5dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.halloapp.widget.DrawDelegateView
        android:id="@+id/draw_delegate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:importantForAccessibility="no"/>

</FrameLayout>
