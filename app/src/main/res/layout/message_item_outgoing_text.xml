<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include
        layout="@layout/message_item_header"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="16dp">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingTop="4dp"
            android:background="@drawable/message_background_outgoing"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/reply_container"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.halloapp.widget.MessageTextLayout
                android:id="@+id/message_text_container"
                android:paddingTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="9dp">

                <com.halloapp.widget.LimitingTextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:lineSpacingMultiplier="1.1"
                    android:paddingStart="4dp"
                    android:paddingEnd="14dp"
                    android:layout_gravity="start"
                    android:textAppearance="?textAppearanceListItemSmall"
                    android:textSize="@dimen/message_text_size"
                    app:ltvReadMore="@string/read_more"
                    tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua." />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom|end">

                    <TextView
                        android:id="@+id/timestamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="0dp"
                        android:paddingEnd="5dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/message_timestamp"
                        android:textSize="10sp"
                        tools:text="11:49 PM"/>

                    <ImageView
                        android:id="@+id/status"
                        android:layout_width="14dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitCenter"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="10dp"
                        tools:src="@drawable/ic_messaging_delivered" />

                </LinearLayout>

            </com.halloapp.widget.MessageTextLayout>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>
