<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clipToPadding="false"
    android:clipChildren="false">

    <include
        layout="@layout/message_item_header"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end">

        <com.halloapp.widget.MessageBubbleLinearLayout
            android:id="@+id/content"
            android:layout_marginStart="64dp"
            android:layout_marginEnd="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginVertical="2dp"
            android:layout_gravity="end"
            android:paddingTop="4dp"
            android:background="@drawable/message_background_outgoing"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/reply_container"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <include layout="@layout/message_url_preview" />

            <com.halloapp.widget.MessageTextLayout
                android:id="@+id/message_text_container"
                android:paddingTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="9dp">

                <com.halloapp.widget.LimitingTextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:lineSpacingMultiplier="1.1"
                    android:paddingStart="4dp"
                    android:paddingEnd="14dp"
                    android:layout_gravity="start"
                    android:textAppearance="?textAppearanceListItemSmall"
                    android:textSize="@dimen/message_text_size"
                    app:ltvReadMore="@string/read_more"
                    tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua." />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom|end">

                    <TextView
                        android:id="@+id/timestamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="0dp"
                        android:paddingEnd="5dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/message_timestamp_outgoing"
                        android:textSize="10sp"
                        tools:text="11:49 PM"/>

                    <ImageView
                        android:id="@+id/status"
                        android:layout_width="14dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitCenter"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="10dp"
                        tools:src="@drawable/ic_messaging_delivered" />

                </LinearLayout>

            </com.halloapp.widget.MessageTextLayout>

        </com.halloapp.widget.MessageBubbleLinearLayout>

        <ImageView
            android:id="@+id/placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@id/content"
            app:layout_constraintBottom_toBottomOf="@id/content"
            android:layout_marginBottom="1dp"
            android:layout_marginEnd="19dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/selected_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/placeholder"
            app:layout_constraintBottom_toBottomOf="@id/placeholder"
            android:gravity="center"
            android:elevation="1.2dp"
            android:background="@drawable/message_item_reaction_circle_outgoing"
            android:textColor="@color/black"
            android:textSize="@dimen/reaction_circle_emoji_size"
            android:visibility="gone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
