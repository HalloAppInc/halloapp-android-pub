<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingBottom="32dp"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:clipToPadding="false">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/post_card_background"
        app:cardElevation="@dimen/post_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:orientation="horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    app:shapeAppearance="@style/CircularImageView"
                    android:id="@+id/avatar"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@mipmap/ic_launcher_round" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="6dp"
                    android:layout_gravity="center_vertical"
                    android:paddingEnd="6dp">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textAppearance="?textAppearanceListItem"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp"
                        android:lineSpacingExtra="0dp"
                        android:includeFontPadding="false"
                        android:fontFamily="sans-serif-medium"
                        android:textDirection="locale"
                        android:textAlignment="gravity"
                        android:text="@string/app_name"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/time"
                            android:paddingTop="1dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/post_timestamp"
                            android:textSize="14sp"
                            android:lineSpacingExtra="0dp"
                            android:includeFontPadding="false"
                            tools:text="1h" />

                        <TextView
                            android:id="@+id/decrypt_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="12dp"
                            android:paddingStart="0dp"
                            android:paddingBottom="6dp"
                            android:textColor="#19C253"
                            android:textSize="10sp"
                            tools:text="11:49 PM"/>

                    </LinearLayout>
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progress"
                    android:layout_width="36dp"
                    android:layout_height="28dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:visibility="gone"
                    tools:visibility="visible"/>

                <ImageView
                    android:id="@+id/status"
                    android:layout_width="36dp"
                    android:layout_height="28dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    tools:src="@drawable/ic_error"
                    tools:tint="@color/design_default_color_error"
                    android:visibility="gone"
                    tools:visibility="visible"/>

                <ImageView
                    android:id="@+id/more_options"
                    android:layout_width="27dp"
                    android:layout_height="28dp"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    app:tint="@color/post_timestamp"
                    android:visibility="gone"
                    android:background="?selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_more_vert"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/post_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_marginTop="13dp"
                    android:src="@drawable/ic_party_popper"
                    android:layout_gravity="center"/>


                <TextView
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="20sp"
                    android:textColor="@color/primary_text"
                    android:text="@string/home_onboarding_nux_header"/>

                <TextView
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/tertiary_text"
                    android:text="@string/home_onboarding_nux_text"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:src="@drawable/ic_hug_connection"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="20sp"
                    android:textColor="@color/primary_text"
                    android:text="@string/home_onboarding_nux_post_visibility_header"/>

                <TextView
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/tertiary_text"
                    android:text="@string/home_onboarding_nux_post_visibility_text"/>

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Button.Secondary.Rounded"
                android:id="@+id/view_network_button"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/see_network_action"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>
