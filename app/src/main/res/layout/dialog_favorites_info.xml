<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_dialog"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="18dp"
                android:paddingStart="18dip"
                android:paddingEnd="14dip">

                <TextView android:id="@+id/dialog_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:textColor="@color/primary_text"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/contact_favorites"
                    android:textSize="19sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_favorites"/>

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dip"
                android:paddingBottom="12dip"
                android:paddingStart="18dip"
                android:paddingEnd="14dip"
                android:overScrollMode="ifContentScrolls">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView android:id="@+id/dialog_message"
                        android:layout_width="match_parent"
                        android:lineSpacingMultiplier="1.26"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="@string/friend_favorites_explanation"
                        android:padding="4dp" />

                </FrameLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_container"
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dip"
            android:paddingStart="8dip"
            android:paddingEnd="8dip"
            android:paddingBottom="10dp"
            android:gravity="end"
            android:measureWithLargestChild="true">
            <com.google.android.material.button.MaterialButton android:id="@+id/settings"
                android:layout_width="wrap_content"
                android:layout_gravity="start"
                style="?attr/buttonBarButtonStyle"
                android:maxLines="1"
                android:layout_marginHorizontal="6dp"
                android:textAllCaps="false"
                android:text="@string/edit_favorites_action"
                android:textSize="15sp"
                android:paddingVertical="10dp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.01"
                app:rippleColor="@color/rippleColor"
                app:cornerRadius="30dp"
                android:textColor="@color/favorites_dialog_blue"
                android:layout_height="wrap_content" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/ok"
                android:layout_width="wrap_content"
                android:layout_gravity="end"
                android:maxLines="1"
                app:cornerRadius="30dp"
                android:stateListAnimator="@null"
                android:letterSpacing="0.01"
                android:paddingVertical="10dp"
                android:fontFamily="sans-serif-medium"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:backgroundTint="@color/favorites_dialog_blue"
                android:text="@string/ok"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
