<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp">

    <com.google.android.material.imageview.ShapeableImageView
        app:shapeAppearance="@style/CircularImageView"
        android:id="@+id/avatar"
        android:layout_marginStart="5dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/avatar_person"
        android:layout_gravity="center_vertical"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/avatar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/invite"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="10dp"
        >

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:textAppearance="?textAppearanceListItem"
            android:fontFamily="sans-serif-medium"
            android:textDirection="firstStrong"
            android:textAlignment="gravity"
            android:textSize="17sp"
            tools:text="Alice Bob"/>

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name"
            app:layout_constraintBottom_toBottomOf="parent"
            android:singleLine="true"
            android:ellipsize="end"
            android:textDirection="locale"
            android:textAlignment="gravity"
            android:textColor="@color/primary_text"
            tools:text="+1 (650) 555-5555"/>

        <TextView
            android:id="@+id/mutual_contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phone"
            app:layout_constraintBottom_toBottomOf="parent"
            android:singleLine="true"
            android:ellipsize="end"
            android:textAppearance="?textAppearanceListItemSecondary"
            android:textDirection="locale"
            android:textAlignment="gravity"
            android:textColor="@color/secondary_text"
            tools:text="3 contacts on HalloApp"/>

    </LinearLayout>

    <Button
        android:id="@+id/invite"
        android:visibility="visible"
        android:layout_width="110dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/rounded_entry_friendship_bg"
        app:backgroundTint="@color/color_primary_light"
        android:textColor="@color/color_primary"
        android:minHeight="0dp"
        android:stateListAnimator="@null"
        android:textAllCaps="false"
        android:text="@string/invite_action"
        android:textSize="13sp" />

</androidx.constraintlayout.widget.ConstraintLayout>
