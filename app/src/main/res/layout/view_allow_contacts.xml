<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="android.widget.LinearLayout"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tint="@color/hint_text"
        android:layout_gravity="center"
        android:src="@drawable/ic_contacts_permission"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/primary_text"
        android:textSize="20sp"
        android:paddingTop="15dp"
        android:gravity="center"
        android:paddingHorizontal="30dp"
        tools:text="To start chatting, allow access to contacts"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/secondary_text"
        android:textSize="17sp"
        android:paddingTop="10dp"
        android:paddingHorizontal="30dp"
        android:gravity="center"
        android:text="@string/contact_usage_rationale"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/request_permissions"
        style="@style/Widget.Button.Primary.Rounded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/allow_contacts"
        android:layout_gravity="center_horizontal"/>


</merge>
