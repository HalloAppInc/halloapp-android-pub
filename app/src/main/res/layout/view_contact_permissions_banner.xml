<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/contact_permission_banner"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        app:tint="@color/white"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="15dp"
        android:src="@drawable/ic_contacts_permission"/>

    <TextView
        android:id="@+id/contact_permissions_text"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:paddingEnd="18dp"
        android:paddingStart="0dp"
        android:paddingTop="13dp"
        android:paddingBottom="15dp"
        tools:text="To connect with your friends &amp; family and see their posts, allow HalloApp to access your contacts"
        />

</LinearLayout>
