<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="30dp">

        <LinearLayout
            android:id="@+id/profile_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/avatar_person"
                app:civ_border_color="@color/card_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteY="48dp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-medium"
                android:textSize="20sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/avatar"
                tools:text="Ded Pihtov" />

            <TextView
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/tertiary_text"
                tools:text="+1 412-555-6999"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/name"
            android:background="@color/card_background"
            android:layout_marginBottom="25dp"
            android:elevation="2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/my_posts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_image_outline"
                android:textSize="18sp"
                android:drawablePadding="19dp"
                android:textColor="@color/primary_text"
                android:text="@string/my_posts"
                android:paddingStart="24dp"
                android:paddingEnd="5dp"
                android:paddingTop="15dp"
                android:background="?selectableItemBackground"
                android:paddingBottom="16dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/window_background"/>

            <TextView
                android:id="@+id/settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_settings_outline"
                android:textSize="18sp"
                android:drawablePadding="19dp"
                android:textColor="@color/primary_text"
                android:text="@string/settings"
                android:paddingStart="24dp"
                android:paddingEnd="5dp"
                android:paddingTop="15dp"
                android:background="?selectableItemBackground"
                android:paddingBottom="16dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/name"
            android:background="@color/card_background"
            android:elevation="2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/invite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_person_outline"
                android:textSize="18sp"
                android:drawablePadding="19dp"
                android:textColor="@color/primary_text"
                android:text="@string/invite_friends_title"
                android:paddingStart="24dp"
                android:paddingEnd="5dp"
                android:paddingTop="15dp"
                android:background="?selectableItemBackground"
                android:paddingBottom="16dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/window_background"/>

            <TextView
                android:id="@+id/help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_help_outline"
                android:textSize="18sp"
                android:drawablePadding="19dp"
                android:textColor="@color/primary_text"
                android:text="@string/help"
                android:paddingStart="24dp"
                android:paddingEnd="5dp"
                android:paddingTop="15dp"
                android:background="?selectableItemBackground"
                android:paddingBottom="16dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:background="?selectableItemBackground"
            android:textColor="@color/hint_text"
            android:layout_gravity="center_vertical"
            android:drawableStart="@drawable/ic_hallo_outline"
            app:drawableTint="@color/hint_text"
            android:drawablePadding="13dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/about_halloapp"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
