<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="6dp"
    android:background="?selectableItemBackground">

    <FrameLayout
        android:id="@+id/avatar_container"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:padding="4dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/name"
        >
        <ImageView
            android:id="@+id/avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:src="@drawable/ic_home_selected"
            android:background="@color/color_primary"
            app:tint="@android:color/white"
            tools:ignore="ContentDescription" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="@+id/avatar_container"
        app:layout_constraintEnd_toEndOf="@+id/avatar_container"
        android:background="@drawable/change_avatar_background"
        android:backgroundTint="@color/black_87">

        <ImageView
            android:id="@+id/remove"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:tint="@color/white_87"
            android:layout_gravity="center"
            android:src="@drawable/ic_close" />

    </FrameLayout>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="15dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textAppearance="?textAppearanceListItem"
        android:fontFamily="sans-serif-medium"
        android:textDirection="locale"
        android:textAlignment="gravity"
        android:textSize="12sp"
        android:text="@string/home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avatar_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

</androidx.constraintlayout.widget.ConstraintLayout>
