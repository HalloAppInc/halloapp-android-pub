<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ContentComposerActivity">

    <!-- this view is to address initial focus issue on old devices -->
    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/window_background"
            android:gravity="top"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:popupTheme="@style/ThemeOverlay.MaterialComponents"
            app:theme="@style/ActionBar.Composer">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:id="@+id/toolbar_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/new_post"
                        android:textAppearance="@style/TextAppearance.Toolbar.Title.Composer" />

                    <TextView
                        android:id="@+id/toolbar_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:visibility="gone"
                        android:textAppearance="@style/TextAppearance.Toolbar.Subtitle.Composer"
                        app:layout_constrainedWidth="true" />

                </LinearLayout>

                <TextView
                    android:id="@+id/share_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginEnd="17dp"
                    android:paddingHorizontal="24dp"
                    android:layout_gravity="end|center_vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="gone"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/share"
                    android:textSize="16sp"
                    android:paddingBottom="1dp"
                    android:textColor="@color/color_secondary"
                    android:background="@drawable/bg_share_next" />

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:id="@+id/change_privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="13dp"
            android:paddingEnd="13dp"
            android:layout_marginStart="56dp"
            android:visibility="gone"
            android:background="@drawable/bg_privacy_pill"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <TextView
                android:id="@+id/privacy_destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:fontFamily="sans-serif-medium"
                android:textColor="@android:color/white"
                android:paddingTop="5dp"
                android:paddingBottom="7dp"
                tools:text="Home"/>

            <ImageView
                android:id="@+id/spinner_drop_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_drop_down"
                app:tint="@android:color/white"
                tools:visibility="visible" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/voice_composer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:padding="8dp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/destination_list_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/change_privacy">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/content_composer_frame_border"
                app:cardElevation="2dp">

                <com.halloapp.ui.VoicePostComposerView
                    android:id="@+id/voice_composer_view"
                    android:layout_width="match_parent"
                    android:layout_height="340dp" />

            </androidx.cardview.widget.CardView>

        </FrameLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/text_entry_card"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:minHeight="340dp"
            app:layout_constraintHeight_default="wrap"
            app:cardCornerRadius="@dimen/content_composer_frame_border"
            app:cardElevation="2dp"
            android:layout_margin="8dp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/destination_list_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/change_privacy">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:clipChildren="false">

                <LinearLayout
                    android:id="@+id/text_only_entry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="83dp">

                    <com.halloapp.widget.MentionableEntry
                        android:id="@+id/entry_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="top"
                        android:hint="@string/write_a_post"
                        android:importantForAutofill="no"
                        android:inputType="textCapSentences|textMultiLine"
                        android:lineSpacingMultiplier="1.1"

                        android:padding="16dp"

                        android:textAppearance="?textAppearanceListItemSmall"
                        android:textColorHint="@color/secondary_text"
                        android:textSize="@dimen/composer_text_size_large"
                        android:visibility="gone" />

                    <com.halloapp.widget.PostLinkPreviewView
                        android:id="@+id/link_preview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:visibility="gone" />

                </LinearLayout>

            </ScrollView>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="14dp"
                android:background="@color/text_post_compose_footer_overlay">

                <ImageView
                    android:id="@+id/text_add_media"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:padding="14dp"
                    android:src="@drawable/ic_post_add_photo"
                    android:background="?selectableItemBackgroundBorderless"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <FrameLayout
                    android:id="@+id/text_only_send"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_gravity="end|center"
                    android:background="@drawable/bg_send_fab">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="?selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_round_send" />

                </FrameLayout>

            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/media_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/post_entry"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/change_privacy">

            <com.halloapp.widget.ContentComposerScrollView
                android:id="@+id/media_vertical_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.coordinatorlayout.widget.CoordinatorLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/media_loading"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/media_pager_child_padding">

                            <com.halloapp.widget.ContentPhotoView
                                android:id="@+id/preview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                app:contentPvCornerRadius="@dimen/content_composer_media_border"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <FrameLayout
                                android:id="@+id/progress"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintDimensionRatio="0.8"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <ProgressBar
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center" />

                            </FrameLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <com.halloapp.widget.MediaViewPager
                            android:id="@+id/media_pager"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            tools:layout_height="192dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/content_composer_button_margins"
                            android:layout_marginEnd="@dimen/content_composer_button_margins"
                            android:orientation="horizontal"
                            android:translationY="@dimen/content_composer_button_bottom_offset"
                            app:layout_anchor="@id/media_pager"
                            app:layout_anchorGravity="bottom|end">


                            <ImageButton
                                android:id="@+id/delete"
                                android:layout_width="@dimen/content_composer_button_size"
                                android:layout_height="@dimen/content_composer_button_size"
                                android:background="@drawable/media_edit_button"
                                android:padding="@dimen/content_composer_button_padding_delete"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_delete_white"
                                android:visibility="gone" />

                            <ImageButton
                                android:id="@+id/crop"
                                android:layout_width="@dimen/content_composer_button_size"
                                android:layout_height="@dimen/content_composer_button_size"
                                android:layout_marginStart="@dimen/content_composer_button_margins"
                                android:background="@drawable/media_edit_button"
                                android:padding="@dimen/content_composer_button_padding"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_crop_white"
                                android:visibility="gone" />

                        </LinearLayout>

                    </androidx.coordinatorlayout.widget.CoordinatorLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:id="@+id/add_more_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/post_add_more"
                            android:textSize="14sp"
                            android:visibility="gone"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/hint_text"/>

                        <me.relex.circleindicator.CircleIndicator
                            android:id="@+id/media_pager_indicator"
                            android:layout_width="wrap_content"
                            android:layout_height="8dp"
                            android:layout_gravity="center_vertical"
                            app:ci_animator="@animator/pager_indicator_composer"
                            app:ci_drawable="@drawable/pager_item_indicator_selected"
                            app:ci_drawable_unselected="@drawable/pager_item_indicator_unselected"
                            app:ci_height="5dp"
                            app:ci_margin="4dp"
                            app:ci_width="5dp" />

                        <ImageButton
                            android:id="@+id/add_media"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_circle"
                            android:padding="6dp"
                            android:backgroundTint="@color/media_button_background_color_selector"
                            android:layout_marginStart="4dp"
                            android:src="@drawable/ic_composer_add_more"/>

                    </LinearLayout>

                </LinearLayout>

            </com.halloapp.widget.ContentComposerScrollView>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <com.halloapp.ui.mentions.MentionPickerView
            android:id="@+id/mention_picker_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/post_entry"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.halloapp.widget.PostEntryView
            android:id="@+id/post_entry"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/destination_list_container"
            app:layout_constraintEnd_toStartOf="@id/bottom_composer_send"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/media_container" />

        <FrameLayout
            android:id="@+id/bottom_composer_send"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginVertical="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_send_fab"
            app:layout_constraintBottom_toTopOf="@+id/destination_list_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/post_entry">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="?selectableItemBackground"
                android:src="@drawable/ic_round_send" />

        </FrameLayout>

        <com.halloapp.widget.HiddenOnKeyboardLayout
            android:visibility="gone"
            android:id="@+id/destination_list_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.halloapp.ui.share.ShareDestinationListView
                android:id="@+id/destinationList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.halloapp.widget.HiddenOnKeyboardLayout>

        <com.halloapp.widget.VoiceVisualizerView
            android:id="@+id/bottom_visualizer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/destination_list_container"
            android:paddingBottom="10dp"
            android:visibility="gone"
            android:paddingStart="0dp"
            android:paddingEnd="71dp"
            app:vvvMax="100dp"
            app:vvvMin="71dp"/>

        <com.halloapp.widget.VoicePostRecorderControlView
            android:id="@+id/recording_ui"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/destination_list_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/post_entry"
            android:layout_marginBottom="10dp"
            android:layout_gravity="bottom|end"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.halloapp.widget.DrawDelegateView
        android:id="@+id/draw_delegate"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>
