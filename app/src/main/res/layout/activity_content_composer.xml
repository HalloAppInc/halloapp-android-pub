<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ContentComposerActivity">

    <!-- this view is to address initial focus issue on old devices -->
    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/window_background"
            app:layout_constraintBottom_toTopOf="@+id/media_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:popupTheme="@style/ThemeOverlay.MaterialComponents"
            app:theme="@style/ActionBarComposer" />

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/footer"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <FrameLayout
            android:id="@+id/media_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/footer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <com.halloapp.widget.ContentComposerScrollView
                android:id="@+id/media_vertical_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:clipToPadding="false">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/content_composer_frame_border"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.coordinatorlayout.widget.CoordinatorLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.halloapp.widget.MediaViewPager
                                    android:id="@+id/media_pager"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:layout_height="192dp"/>

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_marginRight="@dimen/content_composer_button_margins"
                                    android:translationY="@dimen/content_composer_button_top_offset"
                                    app:layout_anchor="@id/media_pager"
                                    app:layout_anchorGravity="top|right">

                                    <TextView
                                        android:id="@+id/media_index"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="sans-serif-condensed"
                                        android:textColor="@android:color/white"
                                        android:textSize="@dimen/compose_index_text_size"
                                        android:shadowColor="@color/black_80"
                                        android:shadowRadius="4"
                                        android:gravity="right"
                                        android:paddingHorizontal="2dp"
                                        android:layout_marginRight="6dp"
                                        android:visibility="gone"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_marginRight="@dimen/content_composer_button_margins"
                                    android:translationY="@dimen/content_composer_button_bottom_offset"
                                    app:layout_anchor="@id/media_pager"
                                    app:layout_anchorGravity="bottom|right">

                                    <ImageButton
                                        android:id="@+id/delete"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:src="@drawable/ic_media_delete"
                                        android:background="@drawable/media_edit_button"
                                        android:visibility="gone"/>

                                    <ImageButton
                                        android:id="@+id/crop"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:src="@drawable/ic_media_crop"
                                        android:background="@drawable/media_edit_button"
                                        android:layout_marginLeft="@dimen/content_composer_button_margins"
                                        android:visibility="gone"/>

                                </LinearLayout>

                            </androidx.coordinatorlayout.widget.CoordinatorLayout>

                            <me.relex.circleindicator.CircleIndicator
                                android:id="@+id/media_pager_indicator"
                                android:layout_width="wrap_content"
                                android:layout_height="8dp"
                                android:layout_gravity="center_horizontal"
                                app:ci_width="5dp"
                                app:ci_height="5dp"
                                app:ci_margin="4dp"
                                app:ci_drawable="@drawable/pager_item_indicator_selected"
                                app:ci_drawable_unselected="@drawable/pager_item_indicator_unselected"
                                app:ci_animator="@animator/pager_indicator"
                                android:layoutDirection="ltr"/>

                            <com.halloapp.widget.MentionableEntry
                                android:id="@+id/entry"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@null"
                                android:hint="@string/write_a_description"
                                android:textColorHint="@color/black_50"
                                android:importantForAutofill="no"
                                android:gravity="top"
                                android:inputType="textCapSentences|textMultiLine"

                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:paddingTop="0dp"
                                android:paddingBottom="4dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="16dp"

                                android:textAppearance="?textAppearanceListItemSmall"
                                android:textSize="@dimen/post_text_size"
                                android:lineSpacingMultiplier="1.1"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </FrameLayout>

            </com.halloapp.widget.ContentComposerScrollView>

        </FrameLayout>

        <com.halloapp.ui.mentions.MentionPickerView
            android:id="@+id/mention_picker_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/footer"
            android:visibility="invisible"/>

        <FrameLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/card_background"
            android:elevation="3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/media_container"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/reply_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="0dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="@drawable/reply_frame">

                <TextView
                    android:id="@+id/reply_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textAppearance="?textAppearanceListItem"
                    android:fontFamily="sans-serif-medium"
                    android:textDirection="locale"
                    android:textAlignment="gravity"
                    android:padding="2dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/reply_media_thumb"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/reply_text"
                    app:layout_constraintVertical_chainStyle="packed"
                    tools:text="Ded Pihtov"/>

                <ImageView
                    android:id="@+id/reply_media_icon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginTop="2dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/reply_text"
                    app:layout_constraintTop_toTopOf="@+id/reply_text"
                    app:layout_constraintBottom_toBottomOf="@+id/reply_text"
                    android:tint="?android:textColorSecondary"
                    tools:src="@drawable/ic_camera"/>

                <TextView
                    android:id="@+id/reply_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textDirection="locale"
                    android:textAlignment="gravity"
                    app:layout_constraintStart_toEndOf="@+id/reply_media_icon"
                    app:layout_constraintEnd_toStartOf="@+id/reply_media_thumb"
                    app:layout_constraintTop_toBottomOf="@+id/reply_name"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:text="Have a nice day"/>

                <ImageView
                    android:id="@+id/reply_media_thumb"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toEndOf="@+id/reply_name"
                    app:layout_constraintEnd_toStartOf="@+id/reply_close"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:src="@drawable/avatar_person"/>

                <ImageView
                    android:id="@+id/reply_close"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:paddingBottom="16dp"
                    android:src="@drawable/ic_close"
                    app:layout_constraintStart_toEndOf="@+id/reply_media_thumb"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.halloapp.widget.DrawDelegateView
        android:id="@+id/draw_delegate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>
