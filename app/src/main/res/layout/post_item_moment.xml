<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingBottom="15dp"
    android:paddingHorizontal="72dp"
    android:clipToPadding="false">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="@dimen/moment_corner_radius">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/blur_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clipChildren="false"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/image_container"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintDimensionRatio="1:1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image_first"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:scaleType="centerCrop"
                            tools:src="@mipmap/ic_launcher" />

                        <View
                            android:id="@+id/image_divider"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#1C1C1E"
                            />

                        <ImageView
                            android:id="@+id/image_second"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:scaleType="centerCrop"
                            tools:src="@mipmap/ic_launcher" />

                    </LinearLayout>

                    <eightbitlab.com.blurview.BlurView
                        android:id="@+id/blurView"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:blurOverlayColor="@color/black_20"
                        app:layout_constraintBottom_toBottomOf="@id/image_container"
                        app:layout_constraintTop_toTopOf="parent">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </eightbitlab.com.blurview.BlurView>

                    <ImageView
                        android:id="@+id/moment_cover"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="@id/image_container"
                        app:layout_constraintBottom_toBottomOf="@id/image_container"
                        android:visibility="gone"
                        android:background="@drawable/bg_moment_overlay"/>

                    <LinearLayout
                        android:id="@+id/unlock_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="0dp"
                        app:layout_constraintTop_toTopOf="@id/image_container"
                        app:layout_constraintBottom_toBottomOf="@id/image_container"
                        android:orientation="vertical">

                        <com.google.android.material.imageview.ShapeableImageView
                            app:shapeAppearance="@style/CircularImageView"
                            android:id="@+id/avatar"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            tools:src="@color/color_primary_dark" />

                        <TextView
                            android:id="@+id/share_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="2dp"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center"
                            android:textColor="@color/white_80"
                            android:textSize="17sp"
                            android:shadowColor="@color/black_20"
                            android:shadowRadius="10"
                            android:singleLine="true"
                            tools:text="Clark's moment" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/unlock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/secondary_button_color_selector"
                            android:fontFamily="sans-serif-medium"
                            android:letterSpacing="0.01"
                            android:maxLines="1"
                            android:paddingStart="20dp"
                            android:paddingEnd="19dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="10dp"
                            android:stateListAnimator="@null"
                            android:text="@string/view_action"
                            android:textAllCaps="false"
                            android:textSize="20sp"
                            android:textAlignment="center"
                            app:cornerRadius="30dp"
                            app:icon="@drawable/ic_eye_slash"
                            />

                        <TextView
                            android:id="@+id/share_subtitle_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="4dp"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center"
                            android:textColor="@color/white_80"
                            android:textSize="13sp"
                            android:shadowColor="@color/black_30"
                            android:shadowRadius="10"
                            tools:text="To see moments, share your own" />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/line_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginHorizontal="18dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="17dp"
                    android:gravity="end"
                    android:singleLine="true"
                    android:textAllCaps="true"
                    android:textColor="@color/secondary_text"
                    android:textSize="17sp"
                    style="@style/MomentFont"
                    android:shadowColor="#00FFFFFF"
                    android:shadowDx="20"
                    android:shadowDy="0"
                    android:shadowRadius="1"
                    tools:text="Monday" />
                <!--
                the invisible shadow prevents TextView from cutting the last letter
                android:clipChildren="false" on the parent is also required
                -->

                <com.halloapp.widget.AvatarsLayout
                    android:id="@+id/seen_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:paddingHorizontal="18dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="17dp"
                    app:alPaddingColor="@color/card_background"
                    app:alPaddingSize="1dp"
                    app:alElevation="0dp"
                    app:alAvatarSize="27dp"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/seen_button"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="end"
                    android:paddingHorizontal="18dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="17dp"
                    style="?actionButtonStyle"
                    app:tint="@color/secondary_text_button"
                    android:src="@drawable/ic_seen_by"
                    android:contentDescription="@string/seen_by"
                    android:visibility="gone" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
