<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingBottom="15dp"
    android:clipToPadding="false">

    <LinearLayout
        android:id="@+id/my_moment_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="47dp"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:visibility="gone">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/my_avatar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            tools:src="@color/color_primary_dark" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="6dp"
            android:paddingEnd="6dp">

            <com.halloapp.ui.posts.PostAttributionLayout
                android:id="@+id/post_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <ImageView
            android:id="@+id/more_options"
            android:layout_width="27dp"
            android:layout_height="28dp"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:layout_gravity="center_vertical"
            app:tint="@color/primary_text"
            android:visibility="visible"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_more_vert"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="47dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="@dimen/moment_corner_radius">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/blur_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <com.halloapp.widget.ContentPhotoView
                        android:id="@+id/image"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        app:contentPvBorderColor="@color/media_content_outline"
                        app:contentPvCornerRadius="@dimen/moment_media_corner_radius"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:src="@mipmap/ic_launcher" />

                    <eightbitlab.com.blurview.BlurView
                        android:id="@+id/blurView"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:blurOverlayColor="@color/black_20"
                        app:layout_constraintBottom_toBottomOf="@id/image"
                        app:layout_constraintTop_toTopOf="parent">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </eightbitlab.com.blurview.BlurView>

                    <ImageView
                        android:id="@+id/moment_cover"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="@id/image"
                        app:layout_constraintBottom_toBottomOf="@id/image"
                        android:visibility="gone"
                        android:background="@drawable/bg_moment_overlay"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/line_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="12dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="22dp"
                    android:fontFamily="@font/courier_prime"
                    android:gravity="end"
                    android:textAllCaps="true"
                    android:maxLines="1"
                    android:textColor="@color/primary_text"
                    android:textSize="18sp"
                    tools:text="Monday" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/unlock_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="40dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/avatar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@color/color_primary_dark" />

                <TextView
                    android:id="@+id/share_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:textColor="@color/white_70"
                    android:textSize="18sp"
                    tools:text="Clark shared an instant post" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/unlock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/favorites_dialog_blue"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.01"
                    android:maxLines="1"
                    android:layout_marginTop="-1dp"
                    android:paddingHorizontal="22dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="10dp"
                    android:stateListAnimator="@null"
                    android:text="@string/unlock_action"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:cornerRadius="30dp" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:id="@+id/seen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="47dp"
        app:layout_constraintEnd_toStartOf="@+id/share_button"
        >

        <com.halloapp.widget.AvatarsLayout
            android:id="@+id/seen_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:alPaddingColor="@color/window_background"
            app:alPaddingSize="1dp"
            app:alElevation="0dp"
            app:alAvatarSize="27dp"
            android:visibility="gone"
            tools:visibility="visible"/>

        <ImageButton
            style="?actionButtonStyle"
            android:id="@+id/seen_button"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="end|bottom"
            android:paddingTop="10dp"
            android:paddingBottom="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:tint="@color/secondary_text"
            android:src="@drawable/ic_seen_by"
            android:contentDescription="@string/seen_by"
            android:visibility="gone"
            tools:visibility="gone"/>

    </FrameLayout>


</LinearLayout>
