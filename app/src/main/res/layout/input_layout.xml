<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="3dp"
        android:paddingHorizontal="3dp"
        android:clipToPadding="false"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/input_bar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:minHeight="45dp"
            android:paddingHorizontal="2dp"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/bg_chat_input"
            android:elevation="0.5dp"
            android:layout_height="wrap_content">

            <ImageView
                style="?actionButtonStyle"
                android:id="@+id/kb_toggle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:tint="@color/color_secondary"
                android:src="@drawable/ic_emoji_smilies"/>

            <com.halloapp.widget.MentionableEntry
                android:id="@+id/entry_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@null"
                android:hint="@string/type_a_message_hint"
                android:importantForAutofill="no"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLines="6"
                app:layout_constraintStart_toEndOf="@id/kb_toggle"
                app:layout_constraintEnd_toStartOf="@+id/media"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageButton
                android:id="@+id/media"
                style="?actionButtonStyle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_image"
                android:contentDescription="@string/pick_media"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/entry_card"/>

            <View
                android:id="@+id/recording_indicator"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:gravity="center_vertical"
                android:background="@drawable/recording_indicator"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:layout_marginTop="1dp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@id/entry_card"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="00:01"/>

            <TextView
                android:id="@+id/recording_time"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:textColor="@color/color_primary"
                android:textSize="21sp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:fontFamily="sans-serif-medium"
                app:layout_constraintStart_toEndOf="@id/recording_indicator"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="00:01"/>

            <TextView
                android:id="@+id/cancel_voice_note"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:background="?selectableItemBackground"
                android:textColor="@color/color_secondary"
                android:text="@string/cancel"/>

            <ImageButton
                android:id="@+id/delete_voice_draft"
                style="?actionButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete"
                android:contentDescription="@string/send"
                app:tint="@color/color_primary"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:id="@+id/voice_draft_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_voice_draft"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@id/delete_voice_draft"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/control_btn"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:layout_constraintStart_toEndOf="@id/ptt_avatar"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:tint="@color/voice_draft_button"
                    android:src="@drawable/ic_play_arrow"/>

                <androidx.appcompat.widget.AppCompatSeekBar
                    style="@style/Widget.Seekbar.Draft"
                    android:id="@+id/voice_note_seekbar"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="10dp"/>

                <TextView
                    android:id="@+id/seek_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:paddingEnd="7dp"
                    android:paddingBottom="2dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/voice_draft_button"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/voice_note_seekbar"
                    android:textSize="12sp"
                    tools:text="0:03"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/bg_circle"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="4dp"
            android:backgroundTint="@color/secondary_button_color_selector">

            <ImageButton
                android:id="@+id/send"
                style="?actionButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chat_send"
                android:contentDescription="@string/send"
                android:visibility="invisible"
                tools:visibility="visible"
                app:tint="@color/white"
                app:layout_constraintVertical_bias="1.0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/media" />

            <ImageButton
                android:id="@+id/record_voice"
                style="?actionButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_keyboard_voice"
                android:contentDescription="@string/send"
                app:tint="@color/white"
                tools:visibility="gone"
                app:layout_constraintVertical_bias="1.0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/media" />

        </FrameLayout>

    </LinearLayout>

</merge>
