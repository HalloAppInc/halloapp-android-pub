<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="3dp"
        android:paddingHorizontal="3dp"
        android:clipToPadding="false"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/input_bar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="2dp"
            android:layout_marginHorizontal="2dp"
            android:elevation="0.5dp"
            android:background="@drawable/bg_chat_input">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/reply_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:visibility="gone">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/reply_preview_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:paddingStart="18dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="0dp"
                        android:paddingBottom="8dp"
                        android:background="@drawable/reply_frame_background"
                        android:backgroundTint="@color/message_background_reply_incoming"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/reply_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif-medium"
                            android:paddingStart="2dp"
                            android:paddingEnd="2dp"
                            android:singleLine="true"
                            android:textAlignment="gravity"
                            android:textAppearance="?textAppearanceListItem"
                            android:textDirection="locale"
                            app:layout_constraintBottom_toTopOf="@+id/reply_text"
                            app:layout_constraintEnd_toStartOf="@+id/reply_media_thumb"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_chainStyle="packed"
                            tools:text="Ded Pihtov" />

                        <ImageView
                            android:id="@+id/reply_media_icon"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="6dp"
                            app:layout_constraintBottom_toBottomOf="@+id/reply_text"
                            app:layout_constraintEnd_toStartOf="@+id/reply_text"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/reply_text"
                            app:tint="?android:textColorSecondary"
                            tools:src="@drawable/ic_camera" />

                        <TextView
                            android:id="@+id/reply_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:padding="2dp"
                            android:textAlignment="gravity"
                            android:textDirection="locale"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/reply_media_thumb"
                            app:layout_constraintStart_toEndOf="@+id/reply_media_icon"
                            app:layout_constraintTop_toBottomOf="@+id/reply_name"
                            tools:text="Have a nice day" />

                        <ImageView
                            android:id="@+id/reply_media_thumb"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:scaleType="centerCrop"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/reply_close"
                            app:layout_constraintStart_toEndOf="@+id/reply_name"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:src="@drawable/avatar_person" />

                        <ImageView
                            android:id="@+id/reply_close"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:paddingBottom="16dp"
                            android:src="@drawable/ic_close"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/reply_media_thumb"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </FrameLayout>

                <com.halloapp.widget.LinkPreviewComposeView
                    android:id="@+id/link_preview_compose_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:elevation="3dp"
                    android:visibility="gone" />

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="45dp">

                <ImageView
                    style="?actionButtonStyle"
                    android:id="@+id/kb_toggle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="3dp"
                    app:tint="@color/color_secondary"
                    android:src="@drawable/ic_emoji_smilies"/>

                <com.halloapp.widget.MentionableEntry
                    android:id="@+id/entry_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@null"
                    android:hint="@string/type_a_message_hint"
                    android:importantForAutofill="no"
                    android:inputType="textCapSentences|textMultiLine"
                    android:maxLines="6"
                    app:layout_constraintStart_toEndOf="@id/kb_toggle"
                    app:layout_constraintEnd_toStartOf="@+id/media"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageButton
                    android:id="@+id/media"
                    style="?actionButtonStyle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_image"
                    android:contentDescription="@string/pick_media"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="3dp"
                    app:layout_constraintStart_toEndOf="@+id/entry_card"/>

                <View
                    android:id="@+id/recording_indicator"
                    android:layout_width="9dp"
                    android:layout_height="9dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/recording_indicator"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:layout_marginTop="1dp"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@id/entry_card"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:text="00:01"/>

                <TextView
                    android:id="@+id/recording_time"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_primary"
                    android:textSize="21sp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:fontFamily="sans-serif-medium"
                    app:layout_constraintStart_toEndOf="@id/recording_indicator"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:text="00:01"/>

                <TextView
                    android:id="@+id/cancel_voice_note"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:background="?selectableItemBackground"
                    android:textColor="@color/color_secondary"
                    android:text="@string/cancel"/>

                <ImageButton
                    android:id="@+id/delete_voice_draft"
                    style="?actionButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_delete"
                    android:contentDescription="@string/send"
                    app:tint="@color/color_primary"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <LinearLayout
                    android:id="@+id/voice_draft_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_voice_draft"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:visibility="gone"
                    app:layout_constraintStart_toEndOf="@id/delete_voice_draft"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/control_btn"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        app:layout_constraintStart_toEndOf="@id/ptt_avatar"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:tint="@color/voice_draft_button"
                        android:src="@drawable/ic_play_arrow"/>

                    <androidx.appcompat.widget.AppCompatSeekBar
                        style="@style/Widget.Seekbar.Draft"
                        android:id="@+id/voice_note_seekbar"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingStart="10dp"/>

                    <TextView
                        android:id="@+id/seek_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:paddingEnd="7dp"
                        android:paddingBottom="2dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/voice_draft_button"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@id/voice_note_seekbar"
                        android:textSize="12sp"
                        tools:text="0:03"/>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/bg_circle"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="4dp"
            android:layout_marginBottom="2dp"
            android:elevation="0.5dp"
            android:backgroundTint="@color/secondary_button_color_selector">

            <ImageButton
                android:id="@+id/send"
                style="?actionButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chat_send"
                android:contentDescription="@string/send"
                android:visibility="invisible"
                tools:visibility="visible"
                app:tint="@color/white"
                app:layout_constraintVertical_bias="1.0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/media" />

            <ImageButton
                android:id="@+id/record_voice"
                style="?actionButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_keyboard_voice"
                android:contentDescription="@string/send"
                app:tint="@color/white"
                tools:visibility="gone"
                app:layout_constraintVertical_bias="1.0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/media" />

        </FrameLayout>

    </LinearLayout>

</merge>
