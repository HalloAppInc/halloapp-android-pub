<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="com.halloapp.widget.calling.calling.CallParticipantsLayout">

    <FrameLayout
        android:id="@+id/remote_video_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <org.webrtc.SurfaceViewRenderer
            android:id="@+id/call_remote_video"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            />

        <View
            android:id="@+id/remote_video_mute_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="@drawable/bg_call_video_mute"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/local_video_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:elevation="2dp"
        android:background="@drawable/bg_call_video_mute"
        android:layout_gravity="bottom|end">

        <com.halloapp.webrtc.HATextureViewRenderer
            android:id="@+id/call_local_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/muted_local_overlay"
            android:visibility="gone"
            android:background="@drawable/bg_call_video_mute">

            <com.google.android.material.imageview.ShapeableImageView
                app:shapeAppearance="@style/CircularImageView"
                android:id="@+id/muted_avatar"
                android:layout_width="50dp"
                android:layout_gravity="center"
                android:layout_height="50dp"/>

        </FrameLayout>

        <ImageView
            android:id="@+id/muted_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:tint="@color/white"
            android:visibility="gone"
            android:src="@drawable/ic_mic_mute"/>

    </FrameLayout>


</merge>
