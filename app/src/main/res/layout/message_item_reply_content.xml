<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:minWidth="@dimen/reply_min_width"
    tools:background="@drawable/reply_frame_outgoing">

    <TextView
        android:id="@+id/reply_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:textAppearance="?textAppearanceListItem"
        android:fontFamily="sans-serif-medium"
        android:textDirection="locale"
        android:textAlignment="gravity"
        android:padding="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/reply_media_thumb"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/reply_text"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Ded Pihtov"/>

    <ImageView
        android:id="@+id/reply_media_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/reply_text"
        app:layout_constraintTop_toTopOf="@+id/reply_text"
        app:layout_constraintBottom_toBottomOf="@+id/reply_text"
        android:tint="?android:textColorSecondary"
        tools:src="@drawable/ic_camera"/>

    <TextView
        android:id="@+id/reply_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintStart_toEndOf="@+id/reply_media_icon"
        app:layout_constraintEnd_toStartOf="@+id/reply_media_thumb"
        app:layout_constraintTop_toBottomOf="@+id/reply_name"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."/>

    <ImageView
        android:id="@+id/reply_media_thumb"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toEndOf="@+id/reply_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="@drawable/avatar_person"/>

</androidx.constraintlayout.widget.ConstraintLayout>