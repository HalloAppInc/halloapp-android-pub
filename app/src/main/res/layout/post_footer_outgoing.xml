<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="LinearLayout"
    tools:orientation="vertical">

    <View
        android:id="@+id/post_actions_separator"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/post_actions_separator"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/progress_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="0dp"
            android:layout_height="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/progress_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:indeterminateOnly="false"
            android:padding="10dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginVertical="12dp"
            android:minHeight="5dp"
            android:maxHeight="5dp"
            android:progressDrawable="@drawable/progress_bar"
            android:progress="25"/>

        <FrameLayout
            android:id="@+id/progress_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintStart_toEndOf="@+id/progress_bar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            android:layout_marginVertical="12dp"
            android:background="@drawable/bg_circle"
            android:backgroundTint="@color/black_20">

            <ImageView
                android:id="@+id/progress_button_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                app:tint="@color/white"
                android:layout_gravity="center"
                android:src="@drawable/ic_close" />

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/post_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/comment"
            style="?actionButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:orientation="horizontal">

            <ImageView
                style="@style/PostButtonIcon"
                android:src="@drawable/ic_feed_comment"/>


            <TextView
                style="@style/PostButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/comments" />

            <View
                style="@style/CommentsIndicator"
                android:id="@+id/comments_indicator" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            >

            <FrameLayout
                android:id="@+id/seen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/share_button"
                >

                <com.halloapp.widget.AvatarsLayout
                    android:id="@+id/seen_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:paddingTop="10dp"
                    android:paddingBottom="8dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    app:alPaddingColor="@color/card_background"
                    app:alPaddingSize="1dp"
                    app:alElevation="0dp"
                    app:alAvatarSize="27dp"
                    android:visibility="gone"
                    tools:visibility="visible"/>

                <ImageButton
                    style="?actionButtonStyle"
                    android:id="@+id/seen_button"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_gravity="end|bottom"
                    android:paddingTop="10dp"
                    android:paddingBottom="8dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:src="@drawable/ic_seen_by"
                    app:tint="@color/primary_text"
                    android:contentDescription="@string/seen_by"
                    android:visibility="gone"
                    tools:visibility="gone"/>

            </FrameLayout>

            <ImageButton
                style="?actionButtonStyle"
                android:id="@+id/share_button"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginEnd="7dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/ic_share_outline"
                app:tint="@color/primary_text"
                android:contentDescription="@string/share_action"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</merge>
