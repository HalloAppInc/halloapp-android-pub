<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/init_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="48dp"
        android:layout_gravity="center_vertical">

        <Button
            android:id="@+id/init_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Start" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ringing_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="48dp"
        android:visibility="gone"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/ringing_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/accept_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingBottom="20dp"
            android:textColor="@android:color/black"
            android:text="Someone is calling you"/>

        <ImageView
            android:id="@+id/accept_view"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:padding="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ringing_text"
            app:srcCompat="@drawable/call"/>

        <ImageView
            android:id="@+id/decline_view"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/ringing_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/disconnect"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/calling_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="48dp"
        android:visibility="gone"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/calling_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingBottom="20dp"
            android:textColor="@android:color/black"
            android:text="Calling someone..."/>

        <ImageView
            android:id="@+id/calling_cancel"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/calling_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="?selectableItemBackgroundBorderless"
            app:tint="@android:color/holo_red_dark"
            app:srcCompat="@drawable/disconnect"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/in_call_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="48dp"
        android:paddingTop="20dp"
        android:visibility="gone"
        android:paddingBottom="20dp"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/in_call_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingBottom="20dp"
            android:textColor="@android:color/black"
            android:text="In Call"/>

        <ImageView
            android:id="@+id/in_call_hangup"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="?selectableItemBackgroundBorderless"
            app:tint="@android:color/holo_red_dark"
            app:srcCompat="@drawable/ic_call_end"/>

        <ImageView
            android:id="@+id/in_call_mute"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:padding="8dp"
            android:background="?selectableItemBackgroundBorderless"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/mic_mute"/>

<!--        <ImageView-->
<!--            android:id="@+id/in_call_unmute"-->
<!--            android:visibility="gone"-->
<!--            android:layout_width="64dp"-->
<!--            android:layout_height="64dp"-->
<!--            android:padding="8dp"-->
<!--            android:background="?selectableItemBackgroundBorderless"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintBottom_toBottomOf="parent"-->
<!--            app:srcCompat="@drawable/mic_unmute"/>-->

        <ImageView
            android:id="@+id/in_call_speaker"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:padding="8dp"
            android:background="?selectableItemBackgroundBorderless"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/speaker_phone"/>

<!--        <ImageView-->
<!--            android:id="@+id/in_call_speaker_off"-->
<!--            android:layout_width="64dp"-->
<!--            android:layout_height="64dp"-->
<!--            android:padding="8dp"-->
<!--            android:background="?selectableItemBackgroundBorderless"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintBottom_toBottomOf="parent"-->
<!--            app:srcCompat="@drawable/speaker_phone_off"/>-->

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>