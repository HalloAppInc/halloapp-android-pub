<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include
        layout="@layout/message_item_header"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.halloapp.widget.MessageBubbleLinearLayout
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/message_background_incoming"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:paddingHorizontal="8dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp">

            <ImageView
                android:id="@+id/call_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginHorizontal="8dp"
                android:layout_gravity="center"
                app:tint="@color/secondary_text"
                android:src="@drawable/ic_call"/>

                <TextView

                    android:id="@+id/call_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:paddingTop="2dp"
                    android:paddingBottom="3dp"
                    android:textColor="@color/secondary_text"
                    android:fontFamily="sans-serif-medium"
                    android:paddingStart="0dp"
                    android:paddingEnd="10dp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/call_duration"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="You called Maria" />

            <TextView
                android:id="@+id/timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/post_timestamp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:textSize="12sp"
                tools:text="11:49 PM"/>

        </com.halloapp.widget.MessageBubbleLinearLayout>

    </FrameLayout>

</LinearLayout>
