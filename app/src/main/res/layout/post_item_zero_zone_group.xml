<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingBottom="32dp"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:clipToPadding="false">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/post_card_background"
        app:cardElevation="@dimen/post_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:orientation="horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    app:shapeAppearance="@style/CircularImageView"
                    android:id="@+id/avatar"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@mipmap/ic_launcher_round" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="6dp"
                    android:layout_gravity="center_vertical"
                    android:paddingEnd="6dp">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textAppearance="?textAppearanceListItem"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp"
                        android:lineSpacingExtra="0dp"
                        android:includeFontPadding="false"
                        android:fontFamily="sans-serif-medium"
                        android:textDirection="locale"
                        android:textAlignment="gravity"
                        android:text="@string/app_name"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/time"
                            android:paddingTop="1dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/post_timestamp"
                            android:textSize="14sp"
                            android:lineSpacingExtra="0dp"
                            android:includeFontPadding="false"
                            tools:text="1h" />

                        <TextView
                            android:id="@+id/decrypt_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="12dp"
                            android:paddingStart="0dp"
                            android:paddingBottom="6dp"
                            android:textColor="#19C253"
                            android:textSize="10sp"
                            tools:text="11:49 PM"/>

                    </LinearLayout>
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progress"
                    android:layout_width="36dp"
                    android:layout_height="28dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:visibility="gone"
                    tools:visibility="visible"/>

                <ImageView
                    android:id="@+id/status"
                    android:layout_width="36dp"
                    android:layout_height="28dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    tools:src="@drawable/ic_error"
                    tools:tint="@color/design_default_color_error"
                    android:visibility="gone"
                    tools:visibility="visible"/>

                <ImageView
                    android:id="@+id/more_options"
                    android:layout_width="27dp"
                    android:layout_height="28dp"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    app:tint="@color/post_timestamp"
                    android:visibility="gone"
                    android:background="?selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_more_vert"/>

            </LinearLayout>

            <com.halloapp.widget.SeenDetectorLayout
                android:id="@+id/seen_detector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/post_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:paddingTop="14dp"
                        android:paddingBottom="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="17sp"
                        android:textColor="@color/primary_text"
                        android:text="@string/invite_group_zero_zone_title"/>

                    <TextView
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/primary_text"
                        android:text="@string/invite_group_zero_zone_details"/>

                    <FrameLayout
                        android:id="@+id/invite_link_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"

                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_gravity="center_horizontal"
                        android:foreground="?selectableItemBackground"
                        android:background="@drawable/bg_share_link">

                        <TextView
                            android:id="@+id/invite_link_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:inputType="none"
                            android:focusable="false"
                            android:longClickable="false"
                            android:clickable="false"
                            android:textSize="17sp"
                            android:textColor="@color/secondary_text"
                            android:enabled="true"
                            tools:text="http://halloapp.com/invite/?g=Wfhpq80uIKQZ1Y0srad9ufrR"/>

                    </FrameLayout>

                </LinearLayout>

            </com.halloapp.widget.SeenDetectorLayout>

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Button.Secondary"
                android:id="@+id/share_link_button"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:letterSpacing="0"
                android:text="@string/share_link"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/remove_zero_zone_nux"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_close"/>

    </androidx.cardview.widget.CardView>

</FrameLayout>
