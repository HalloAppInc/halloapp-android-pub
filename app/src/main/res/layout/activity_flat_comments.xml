<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/comments_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/reply_indicator">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/comments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/reply_indicator"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/window_background"
            app:statusBarForeground="@color/window_background">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:expandedTitleGravity="top"
                app:contentScrim="@null"
                app:statusBarScrim="@null"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_collapseMode="parallax"
                    >

                    <LinearLayout
                        android:id="@+id/header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        app:layout_constraintTop_toTopOf="parent"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="12dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/post_avatar"
                            android:layout_width="37dp"
                            android:layout_height="30dp"
                            android:paddingStart="0dp"
                            android:paddingEnd="7dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:src="@color/color_primary_dark" />

                        <com.halloapp.ui.posts.PostAttributionLayout
                            android:id="@+id/post_header"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                    </LinearLayout>


                    <FrameLayout
                        android:id="@+id/post_content_placeholder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="53dp"
                        android:paddingEnd="16dp"/>

                    <LinearLayout
                        android:id="@+id/post_footer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="53dp"
                        android:paddingEnd="16dp"
                        app:layout_constraintStart_toEndOf="@+id/avatar"
                        app:layout_constraintTop_toBottomOf="@id/comment_text">

                        <TextView
                            android:id="@+id/post_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="0dp"
                            android:paddingTop="4dp"
                            android:paddingEnd="4dp"
                            android:paddingBottom="4dp"
                            android:singleLine="true"
                            android:textColor="?android:attr/textColorSecondary"
                            tools:text="1h" />

                        <ProgressBar
                            android:id="@+id/post_progress"
                            android:layout_width="16sp"
                            android:layout_height="16sp"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/post_actions_separator" />

        </com.google.android.material.appbar.AppBarLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <FrameLayout
        android:id="@+id/reply_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/comments_container"
        app:layout_constraintBottom_toTopOf="@id/media_container"
        android:background="@drawable/bg_reply_preview">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/reply_preview_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="18dp"
            android:paddingEnd="0dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/reply_frame_background"
            android:backgroundTint="@color/message_background_reply_incoming"
            android:layout_margin="8dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/reply_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:textAppearance="?textAppearanceListItem"
                android:fontFamily="sans-serif-medium"
                android:textDirection="locale"
                android:textAlignment="gravity"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:textColor="@color/secondary_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/reply_media_thumb"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/reply_text"
                app:layout_constraintVertical_chainStyle="packed"
                tools:text="Ded Pihtov"/>

            <ImageView
                android:id="@+id/reply_media_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="6dp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/reply_text"
                app:layout_constraintTop_toTopOf="@+id/reply_text"
                app:layout_constraintBottom_toBottomOf="@+id/reply_text"
                app:tint="?android:textColorSecondary"
                tools:src="@drawable/ic_camera"/>

            <TextView
                android:id="@+id/reply_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textDirection="locale"
                android:textAlignment="gravity"
                app:layout_constraintStart_toEndOf="@+id/reply_media_icon"
                app:layout_constraintEnd_toStartOf="@+id/reply_media_thumb"
                app:layout_constraintTop_toBottomOf="@+id/reply_name"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="Have a nice day"/>

            <ImageView
                android:id="@+id/reply_media_thumb"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toEndOf="@+id/reply_name"
                app:layout_constraintEnd_toStartOf="@+id/reply_close"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:src="@drawable/avatar_person"/>

            <ImageView
                android:id="@+id/reply_close"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:paddingBottom="16dp"
                android:src="@drawable/ic_close"
                app:layout_constraintStart_toEndOf="@+id/reply_media_thumb"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/media_container"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:padding="8dp"
        android:background="@color/card_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reply_indicator"
        app:layout_constraintBottom_toTopOf="@id/chat_input"
        android:visibility="gone"
        >

        <FrameLayout
            android:id="@+id/wrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/media_preview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:elevation="2dp"
            app:layout_constraintTop_toTopOf="@+id/wrapper"
            app:layout_constraintEnd_toEndOf="@+id/wrapper"
            android:background="@drawable/change_avatar_background"
            android:backgroundTint="@color/black_87">

            <ImageView
                android:id="@+id/remove"
                android:layout_width="18dp"
                android:layout_height="18dp"
                app:tint="@color/white_87"
                android:layout_gravity="center"
                android:src="@drawable/ic_close" />

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.halloapp.ui.mentions.MentionPickerView
        android:id="@+id/mention_picker_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/reply_indicator"
        android:visibility="invisible"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/membership_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/chat_input"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="invisible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:background="@drawable/post_bg_centered"
            android:backgroundTint="@color/deleted_post_bg"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textAppearance="?textAppearanceBody1"
            android:textStyle="italic"
            android:textSize="16sp"
            android:textColor="@color/secondary_text"
            android:text="@string/no_longer_group_member" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.halloapp.widget.ChatInputView
        android:id="@+id/chat_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:background="@color/card_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <com.halloapp.widget.VoiceNoteRecorderControlView
        android:id="@+id/recording_ui"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:elevation="3dp"
        android:layout_gravity="bottom|end"/>

</androidx.constraintlayout.widget.ConstraintLayout>
