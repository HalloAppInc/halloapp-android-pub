<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include
        layout="@layout/message_item_header"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="64dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:orientation="vertical"
            android:background="@drawable/message_background_incoming"
            tools:layout_width="match_parent"
            tools:layout_height="150dp">

            <FrameLayout
                android:id="@+id/reply_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.halloapp.widget.MediaViewPager
                android:id="@+id/media_pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <me.relex.circleindicator.CircleIndicator
                android:id="@+id/media_pager_indicator"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_gravity="center_horizontal"
                app:ci_width="5dp"
                app:ci_height="5dp"
                app:ci_margin="4dp"
                app:ci_drawable="@drawable/pager_item_indicator_selected"
                app:ci_drawable_unselected="@drawable/pager_item_indicator_unselected"
                app:ci_animator="@animator/pager_indicator"
                android:layout_marginBottom="8dp"
                android:layoutDirection="ltr"/>

            <com.halloapp.widget.LimitingTextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="0dp"
                android:paddingBottom="9dp"
                android:textAppearance="?textAppearanceListItemSmall"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.1"
                android:autoLink="web"
                app:ltvReadMore="@string/read_more"
                tools:text="This is image caption"/>

        </LinearLayout>

    </FrameLayout>
</LinearLayout>