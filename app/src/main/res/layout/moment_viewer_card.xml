<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/moment_corner_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FCF8EF"
        android:clipChildren="false"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/image_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_first"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    tools:src="@mipmap/ic_launcher" />

                <View
                    android:id="@+id/image_divider"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#1C1C1E"
                    />

                <ImageView
                    android:id="@+id/image_second"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    tools:src="@mipmap/ic_launcher" />

            </LinearLayout>

            <ImageView
                android:id="@+id/moment_cover"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/image_container"
                app:layout_constraintBottom_toBottomOf="@id/image_container"
                android:background="@drawable/bg_moment_overlay"/>

            <ProgressBar
                android:id="@+id/download_progress"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:indeterminateDuration="1500"
                android:visibility="gone"
                android:indeterminateDrawable="@drawable/thick_moments_spinner" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/line_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="22dp"
            android:layout_marginTop="12dp"
            android:gravity="end"
            android:textAllCaps="true"
            android:textColor="@color/black_54"
            android:textSize="26sp"
            android:shadowColor="#00FFFFFF"
            android:shadowDx="20"
            android:shadowDy="0"
            android:shadowRadius="1"
            style="@style/MomentFont"
            tools:text="Monday" />
        <!--
        the invisible shadow below prevents TextView from cutting the last letter
        android:clipChildren="false" on the parent is also required
        -->

    </LinearLayout>

</androidx.cardview.widget.CardView>
