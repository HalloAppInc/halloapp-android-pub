<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RegistrationRequestActivity">

    <com.halloapp.widget.NetworkIndicatorView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/network_indicator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"/>

    <ScrollView
        android:id="@+id/entry_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/loading"
        app:layout_constraintTop_toTopOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="vertical"
            tools:context=".ui.RegistrationRequestActivity">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/reg_logo_top_margin"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="39dp"
                android:src="@drawable/ic_logo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="40dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_reg_phone"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="start"
                    android:textColor="@color/color_primary"
                    android:textSize="19sp"
                    android:paddingHorizontal="9dp"
                    android:layout_gravity="center"
                    android:text="@string/phone_entry_title"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/phone_number_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/name_layout">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="12dp"
                    android:paddingEnd="0dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/rounded_entry_bg"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp">

                    <com.hbb20.CountryCodePicker
                        android:id="@+id/ccp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:ccpDialog_textColor="?android:textColorPrimary"
                        app:ccp_autoDetectCountry="true"
                        app:ccp_contentColor="?android:textColorPrimary"
                        app:ccp_countryPreference="us,id,sa,ae,in"
                        app:ccp_showNameCode="false"
                        app:ccp_hintExampleNumberType="MOBILE"
                        app:ccp_useFlagEmoji="true" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:background="@drawable/rounded_entry_bg"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp">

                    <EditText
                        android:id="@+id/phone_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints="phoneNational"
                        android:background="@null"
                        android:textSize="18sp"
                        android:hint="@string/phone_number_hint"
                        android:inputType="phone"
                        tools:ignore="UnusedAttribute" />

                </FrameLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom|start"
                android:paddingTop="9dp"
                android:paddingBottom="9dp"
                android:layout_gravity="start"
                android:layout_marginHorizontal="40dp"
                android:text="@string/phone_number_entry_rationale"
                android:textColor="@color/tertiary_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/next"
                style="@style/Widget.Button.Primary.Rounded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/next"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/send_logs"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_link"
                android:gravity="bottom|center_horizontal"
                android:alpha="0.4"
                android:text="@string/having_issues_registering"
                />

        </LinearLayout>

    </ScrollView>

    <ProgressBar
        style="@style/Widget.ProgressBar.Horizontal"
        android:id="@+id/loading"
        android:indeterminateTint="@color/color_secondary"
        android:indeterminate="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>
