<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="oval">
            <size
                android:width="30dp"
                android:height="30dp" />

            <solid
                android:color="@color/color_primary_40_alpha" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape android:shape="oval">
            <size
                android:width="30dp"
                android:height="30dp" />

            <solid
                android:color="@color/color_primary_40_alpha" />
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <size
                android:width="30dp"
                android:height="30dp" />

            <solid
                android:color="@color/color_primary_70_alpha" />
        </shape>
    </item>
</selector>