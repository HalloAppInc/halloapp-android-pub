<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.halloapp">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-sdk tools:overrideLibrary="com.google.zxing.client.android" />

    <queries>
        <package android:name="com.whatsapp" />
        <intent>
            <action android:name="android.intent.action.SENDTO"/>
            <data android:scheme="smsto" android:host="*" />
        </intent>
    </queries>

    <application
        android:name=".HalloApp"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.Home"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustResize"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:theme="@style/AppTheme.ActivityCenter"
            android:name=".ui.ActivityCenterActivity"
            android:label="@string/activity" />

        <activity android:name=".ui.LowStorageActivity"
            android:label=""/>

        <activity android:name=".ui.DeletionConfirmationActivity"
            android:label=""/>

        <activity android:name=".ui.groups.GroupInviteLinkQrActivity"
            android:label=""/>

        <activity
            android:name=".ui.RegistrationVerificationActivity"
            android:label=""
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysVisible|adjustResize" />

        <activity
            android:name=".ui.RegistrationRequestActivity"
            android:label=""
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize"/>

        <activity android:name=".ui.InitialSyncActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label=""/>

        <activity android:name=".ui.chat.ChatActivity"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/AppTheme.Chat"
            android:label=""
            android:windowSoftInputMode="adjustResize"/>

        <activity android:name=".ui.chat.KeyVerificationActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label=""/>

        <activity
            android:name="com.journeyapps.barcodescanner.CaptureActivity"
            android:screenOrientation="fullSensor"
            tools:replace="screenOrientation" />

        <activity android:name=".ui.groups.CreateGroupActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/new_group_title"
            android:windowSoftInputMode="adjustResize|stateAlwaysVisible"/>

        <activity
            android:name=".ui.contacts.ContactsActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/select_contact"/>

        <activity
            android:name=".ui.groups.PostSharePickerActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/select_post_destination"/>

        <activity
            android:name=".ui.GroupsInCommonActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/groups_in_common"/>

        <activity
            android:name=".ui.contacts.MultipleContactPickerActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize"/>

        <activity
            android:name=".ui.groups.GroupCreationPickerActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize"/>

        <activity
            android:name=".ui.privacy.BlockListActivity"
            android:label="@string/settings_block_list"/>

        <activity
            android:name=".ui.privacy.FeedPrivacyActivity"
            android:label="@string/settings_feed_privacy"/>

        <activity
            android:name=".ui.archive.ArchiveActivity"
            android:label="@string/archive"/>

        <activity
            android:name=".ui.profile.ViewProfileActivity" />

        <activity
            android:name=".ui.HelpActivity"
            android:label="@string/help"/>

        <activity
            android:name=".ui.AccountActivity"
            android:label="@string/settings_account"/>

        <activity
            android:name=".ui.ExportDataActivity"
            android:label="@string/request_data_title"/>

        <activity
            android:name=".ui.DeleteAccountActivity"
            android:label=""/>

        <activity
            android:name=".ui.groups.ViewGroupFeedActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".ui.groups.GroupInfoActivity"
            android:label="@string/group_info_title"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:theme="@style/AppTheme.GroupBackground"
            android:name=".ui.groups.GroupBackgroundActivity"
            android:label="@string/group_background_hint" />

        <activity
            android:name=".ui.groups.EditGroupActivity" />

        <activity
            android:name=".ui.groups.EditGroupDescriptionActivity" />

        <activity
            android:name=".DebugActivity" />

        <activity
            android:name=".DebugStorageActivity"/>

        <activity android:name=".ui.invites.InviteContactsActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/invite_title"
            android:windowSoftInputMode="stateUnchanged|adjustResize"/>

        <activity android:name=".ui.groups.GroupInviteLinkActivity"
            android:theme="@style/AppTheme"
            android:label="@string/invite_link_title"
            android:windowSoftInputMode="stateUnchanged|adjustResize"/>

        <activity
            android:name=".ui.ContentComposerActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".ShareActivity"
            android:exported="true">
            <intent-filter
                android:label="@string/share_option_message">
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="image/*" />
                <data android:mimeType="video/*" />
                <data android:mimeType="text/plain" />
            </intent-filter>
            <intent-filter
                android:label="@string/share_option_message">
                <action android:name="android.intent.action.SEND_MULTIPLE" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="image/*" />
                <data android:mimeType="video/*" />
                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>

        <activity android:name=".ShareActivityPost"
            android:exported="true">
            <intent-filter
                android:label="@string/share_option_post">
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="image/*" />
                <data android:mimeType="video/*" />
                <data android:mimeType="text/plain" />
            </intent-filter>
            <intent-filter
                android:label="@string/share_option_post">
                <action android:name="android.intent.action.SEND_MULTIPLE" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="image/*" />
                <data android:mimeType="video/*" />
                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.groups.ViewGroupInviteLinkActivity"
            android:label="@string/invite_link_title"
            android:theme="@style/AppTheme.Transparent"
            android:exported="true">
            <intent-filter android:autoVerify="true" tools:ignore="UnusedAttribute" android:label="@string/view_group_invite_link_action">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="http"
                    android:host="halloapp.com"
                    android:pathPrefix="/invite"/>
                <data android:scheme="https"
                    android:host="halloapp.com"
                    android:pathPrefix="/invite"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.CommentsActivity"
            android:label="@string/comments"
            android:windowSoftInputMode="adjustResize"/>

        <activity
            android:name=".ui.FlatCommentsActivity"
            android:label="@string/comments"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize"/>

        <activity
            android:name=".ui.settings.SettingsPrivacy"
            android:theme="@style/AppTheme"
            android:label="@string/settings_privacy"/>

        <activity
            android:name=".ui.settings.SettingsNotifications"
            android:theme="@style/AppTheme"
            android:label="@string/notifications"/>

        <activity
            android:name=".ui.settings.SettingsProfile"
            android:label="@string/title_profile"
            android:windowSoftInputMode="stateHidden|adjustResize"/>

        <activity android:name=".ui.camera.CameraActivity"
            android:label="@string/camera_post"
            android:screenOrientation="nosensor"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".ui.mediapicker.MediaPickerActivity"
            android:theme="@style/AppTheme.MediaPickerActivity"
            android:label="@string/gallery"/>

        <activity
            android:name=".ui.PostSeenByActivity"
            android:label=""/>

        <activity
            android:name=".ui.PostContentActivity"
            android:theme="@style/AppTheme.PostContentActivity"
            android:label=""/>

        <activity android:name=".ui.AppExpirationActivity"
            android:label="" />

        <activity android:name=".ui.avatar.AvatarPreviewActivity"
            android:theme="@style/AppTheme.Black"
            android:label="@string/avatar_picker_title" />

        <activity android:name=".ui.mediaexplorer.MediaExplorerActivity"
            android:theme="@style/AppTheme.Black.Translucent"
            android:label="" />

        <activity android:name=".ui.avatar.ViewAvatarActivity"
            android:theme="@style/AppTheme.Black.Translucent"
            android:label="" />

        <activity android:name=".ui.mediaedit.MediaEditActivity"
            android:theme="@style/AppTheme.Black"
            android:label="@string/edit"/>

        <receiver
            android:name=".registration.SmsVerificationReceiver"
            android:exported="true"
            android:permission="com.google.android.gms.auth.api.phone.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.gms.auth.api.phone.SMS_RETRIEVED" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".Notifications$DeleteNotificationReceiver"
            android:enabled="true"
            android:exported="false">
        </receiver>

        <receiver
            android:name=".Notifications$MessageReplyReceiver"
            android:enabled="true"
            android:exported="false">
        </receiver>

        <receiver
            android:name=".Notifications$MarkReadReceiver"
            android:enabled="true"
            android:exported="false">
        </receiver>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.halloapp.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <provider
            android:name=".util.logs.LogProvider"
            android:authorities="com.halloapp.util.logs.LogProvider"
            android:enabled="true"
            android:exported="false"
            android:grantUriPermissions="true" />

        <service
            android:name=".PushMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="firebase_crashlytics_collection_enabled"
            android:value="false" />

    </application>

</manifest>
