<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.halloapp">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <queries>
        <package android:name="com.whatsapp" />
        <intent>
            <action android:name="android.intent.action.SENDTO"/>
            <data android:scheme="smsto" android:host="*" />
        </intent>
    </queries>

    <queries>
        <package android:name="com.instagram.android" />
    </queries>

    <queries>
        <package android:name="com.snapchat.android" />
    </queries>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_rules"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:ignore="GoogleAppIndexingWarning,UnusedAttribute">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.SplashNoActionBar"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustResize"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".katchup.SelfiePostComposerActivity" android:theme="@style/AppTheme.Camera"/>

        <activity android:name=".katchup.ViewKatchupCommentsActivity" android:theme="@style/AppTheme.Black.NoActionBar" android:windowSoftInputMode="adjustResize"/>

        <activity
            android:name=".RegistrationVerificationActivity"
            android:label=""
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysVisible|adjustResize" />

        <activity
            android:name=".RegistrationRequestActivity"
            android:label=""
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize"/>

        <activity
            android:name=".katchup.ViewKatchupProfileActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:exported="true">

            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="http"
                    android:host="katchup.com"
                    android:pathAdvancedPattern="[a-z0-9_.]{3,25}" />
                <data android:scheme="https"
                    android:host="katchup.com"
                    android:pathAdvancedPattern="[a-z0-9_.]{3,25}" />
            </intent-filter>

        </activity>

        <activity
            android:name=".katchup.ArchiveActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".katchup.SetupNameProfileActivity"
            android:label=""
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize"/>

        <activity
            android:name=".katchup.SetupUsernameProfileActivity"
            android:label=""
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".katchup.ContactsAndLocationAccessActivity"
            android:label=""
            android:theme="@style/AppTheme.ContactsAndLocationAccess"
            android:windowSoftInputMode="adjustResize"/>

        <activity
            android:name=".katchup.OnboardingFollowingActivity"
            android:label=""
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize"/>

        <activity
            android:name=".katchup.GetStartedActivity"
            android:label=""
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize"/>

        <activity android:name=".ui.InitialSyncActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label=""/>

        <activity android:name=".katchup.ReportActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label=""/>

        <activity
            android:name=".katchup.AppExpirationActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".katchup.ProfileEditActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".katchup.ProfilePictureCameraActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".katchup.ProfilePictureCropActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".katchup.ProfileBioEditActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".katchup.ProfileLinksActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".katchup.ProfileLinkEditActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".katchup.SettingsActivity"
            android:theme="@style/AppTheme.Black.NoActionBar" />

        <!-- Disabling Sentry by setting empty DSN until we have picked a new package name -->
        <meta-data android:name="io.sentry.dsn" android:value="" />
        <meta-data android:name="io.sentry.traces.sample-rate" android:value="0.1" />
        <meta-data android:name="io.sentry.auto-init" android:value="false" />

        <provider
            android:name=".util.logs.LogProvider"
            android:authorities="com.halloapp.katchup.util.logs.LogProvider"
            android:enabled="true"
            android:exported="false"
            android:grantUriPermissions="true" />

        <receiver
            android:name=".katchup.Notifications$DeleteMomentNotificationReceiver"
            android:enabled="true"
            android:exported="false">
        </receiver>

        <receiver
            android:name=".katchup.Notifications$DeleteScreenshotNotificationReceiver"
            android:enabled="true"
            android:exported="false">
        </receiver>

        <receiver
            android:name=".katchup.Notifications$DeleteReactionNotificationReceiver"
            android:enabled="true"
            android:exported="false">
        </receiver>

        <receiver
            android:name=".registration.SmsVerificationReceiver"
            android:exported="true"
            android:permission="com.google.android.gms.auth.api.phone.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.gms.auth.api.phone.SMS_RETRIEVED" />
            </intent-filter>
        </receiver>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.halloapp.katchup.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            android:exported="false"
            tools:node="merge">
            <meta-data android:name="androidx.emoji2.text.EmojiCompatInitializer"
                tools:node="remove" />
        </provider>

        <service
            android:name=".PushMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </service>

        <service android:name=".HuaweiMessagingService" android:exported="false">
            <intent-filter>
                <action android:name="com.huawei.push.action.MESSAGING_EVENT"/>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </service>

        <meta-data
            android:name="firebase_crashlytics_collection_enabled"
            android:value="false" />

    </application>

</manifest>
