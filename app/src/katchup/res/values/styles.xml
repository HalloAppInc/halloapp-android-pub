        <item name="backgroundTint">@color/registration_button_color_selector</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RegistrationPromptText">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="RegistrationInfoText">
        <item name="android:textColor">@color/black_40</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="RegistrationActionText">
        <item name="android:textColor">@color/registration_action_button_text_color_selector</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
