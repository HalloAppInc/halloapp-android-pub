<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme.SplashNoActionBar" parent="Theme.SplashScreen">
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowNoTitle">true</item>

        <item name="windowSplashScreenBackground">@color/splash_screen</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_screen_icon</item>
        <item name="postSplashScreenTheme">@style/AppTheme.NoActionBar</item>
    </style>

    <style name="AppTheme.ContactsAndLocationAccess" parent="AppTheme.NoActionBar">
        <item name="android:statusBarColor">@color/splash_status_bar</item>
        <item name="android:navigationBarColor">@color/splash_navigation_bar</item>
        <item name="useLightSystemBars">true</item>
    </style>

    <style name="AppTheme.ViewKatchupComments" parent="AppTheme.Black.NoActionBar">
        <item name="android:navigationBarColor">@color/reaction_entry_background_dark</item>
    </style>

    <style name="Widget.Button.Onboarding" parent="Widget.Button.Primary.Rounded">
        <item name="backgroundTint">@color/registration_button_color_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/onboarding_button_text_size</item>>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="OnboardingPromptText">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/onboarding_prompt_text_size</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="OnboardingInfoText">
        <item name="android:textColor">@color/onboarding_info_text</item>
        <item name="android:textSize">@dimen/onboarding_info_text_size</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="RegistrationActionText">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/registration_action_button_text_color_selector</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RoundedGalleryImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

</resources>
