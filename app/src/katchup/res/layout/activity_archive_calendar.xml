<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:orientation="vertical"
    android:paddingHorizontal="8dp">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/calendar_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
    </androidx.recyclerview.widget.RecyclerView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/archive_gradient_overlay_height"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bg_archive_gradient_overlay_top" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/archive_gradient_overlay_height"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_archive_gradient_overlay_bottom" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:background="@null"
        android:src="@drawable/ic_arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/color_primary_light" />

</androidx.constraintlayout.widget.ConstraintLayout>
