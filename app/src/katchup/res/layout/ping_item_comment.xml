<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    tools:background="@color/black"
    >

    <com.halloapp.katchup.JellybeanClipView
        android:id="@+id/avatar_container"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@null">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            tools:src="@drawable/test_image"/>

    </com.halloapp.katchup.JellybeanClipView>

    <TextView
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/avatar_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="8dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="16sp"
        android:textColor="@color/white"
        tools:text="Dev: Wild"
        />

    <ImageView
        android:id="@+id/seen"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:padding="1dp"
        app:layout_constraintEnd_toEndOf="@id/avatar_container"
        app:layout_constraintTop_toTopOf="@+id/avatar_container"
        android:src="@drawable/ic_ping"
        android:background="@drawable/ping_background"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
