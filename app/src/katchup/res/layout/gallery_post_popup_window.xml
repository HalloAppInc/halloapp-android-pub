<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DA000000"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/image_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="3:4"
        android:layout_marginTop="160dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="200dp"
        app:cardCornerRadius="@dimen/post_card_radius"
        app:strokeWidth="@dimen/post_stroke_width"
        app:strokeColor="@color/white"
        android:theme="@style/Theme.MaterialComponents"
        >

        <com.halloapp.widget.CropPhotoView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            app:cropPvCornerColor="@android:color/black"
            app:cropPvCornerRadius="0dp"
            />

    </com.google.android.material.card.MaterialCardView>

    <ImageButton
        android:id="@+id/done_button"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_container"
        android:background="@drawable/bg_custom_fab"
        android:backgroundTint="@color/color_primary_light"
        android:src="@drawable/ic_done_check"/>

</androidx.constraintlayout.widget.ConstraintLayout>
