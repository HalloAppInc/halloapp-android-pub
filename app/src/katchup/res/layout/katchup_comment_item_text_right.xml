<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="6dp">

    <com.halloapp.katchup.JellybeanClipView
        android:id="@+id/avatar_container"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/content"
        app:layout_constraintBottom_toBottomOf="@id/content"
        app:layout_constraintEnd_toStartOf="@id/content"
        android:layout_marginEnd="10dp">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@drawable/test_image"/>

    </com.halloapp.katchup.JellybeanClipView>

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/text_container"
            android:layout_width="wrap_content"
            android:background="@drawable/katchup_comment_bg"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:paddingStart="11dp"
            android:padding="8dp">

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:maxWidth="190dp"
                android:layout_height="wrap_content"
                android:textColor="#9EFFB9"
                tools:text="omggg thats what my cat does holy!!! thats so coool"/>

        </FrameLayout>

        <TextView
            android:id="@+id/emoji_only_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="77dp"
            android:textColor="@color/white"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/avatar_container"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="ðŸ¥º"
            />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
