<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background_light"
    android:fitsSystemWindows="true"
    tools:context=".RegistrationVerificationActivity">

    <com.halloapp.widget.NetworkIndicatorView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/network_indicator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/loading"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="40dp"
            android:orientation="vertical"
            android:gravity="top"
            tools:context=".ui.RegistrationRequestActivity">

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/wordmark_top_margin"
                android:textSize="35sp"
                android:fontFamily="@font/rubikbubbles"
                android:text="@string/app_name"
                android:textAllCaps="true"
                android:textColor="@color/color_primary"
                />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="40dp"
                android:gravity="start"
                style="@style/OnboardingPromptText"
                android:text="@string/verify_registration_title"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/code_hint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="46sp"
                    android:textColor="@color/reg_hint_color"
                    android:text="000000"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:importantForAutofill="no"
                    android:gravity="center"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="46sp"
                    android:textColor="@color/black_80"
                    android:textColorHint="@color/reg_hint_color"
                    android:singleLine="true"
                    android:background="@null"
                    android:textAlignment="center" />

            </FrameLayout>

            <LinearLayout
                android:id="@+id/success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_party_popper"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="19sp"
                    android:layout_margin="15dp"
                    android:textColor="@color/color_primary"
                    android:text="@string/register_success"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/otp_request_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/resend_sms"
                    app:layout_constraintTop_toBottomOf="@id/code"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="30dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginBottom="2dp"
                    android:background="?selectableItemBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:padding="4dp"
                        style="@style/RegistrationActionText"
                        android:text="@string/resend_sms"/>

                    <TextView
                        android:id="@+id/resent_sms_timer"
                        app:layout_constraintTop_toTopOf="@id/resend_sms"
                        app:layout_constraintBottom_toBottomOf="@id/resend_sms"
                        app:layout_constraintStart_toEndOf="@id/resend_sms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:textColor="@color/reg_hint_color"
                        style="@style/RegistrationActionText"
                        tools:text="1:30"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/call_me"
                    app:layout_constraintTop_toBottomOf="@id/resend_sms"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginHorizontal="30dp"
                    android:background="?selectableItemBackground"
                    android:layout_width="wrap_content"
                    android:layout_marginVertical="2dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        style="@style/RegistrationActionText"
                        android:text="@string/request_call"/>

                    <TextView
                        android:id="@+id/call_me_timer"
                        app:layout_constraintTop_toTopOf="@id/call_me"
                        app:layout_constraintBottom_toBottomOf="@id/call_me"
                        app:layout_constraintStart_toEndOf="@id/call_me"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:textColor="@color/reg_hint_color"
                        style="@style/RegistrationActionText"
                        tools:text="1:30"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/wrong_number"
                    app:layout_constraintTop_toBottomOf="@id/call_me"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginBottom="30dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginVertical="2dp"
                    android:background="?selectableItemBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:fontFamily="sans-serif-medium"
                        style="@style/RegistrationActionText"
                        android:text="@string/wrong_number"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/send_logs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="bottom|center_horizontal"
                    android:alpha="0.4"
                    style="@style/OnboardingInfoText"
                    android:text="@string/having_issues_registering"
                    />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <ProgressBar
        style="@style/Widget.ProgressBar.Horizontal"
        android:id="@+id/loading"
        android:indeterminateTint="@color/color_secondary"
        android:indeterminate="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>
