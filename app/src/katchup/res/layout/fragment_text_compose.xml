<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/preview_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="visible"
                android:background="#181818"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintDimensionRatio="3:4"
                app:layout_constraintBottom_toBottomOf="parent">

                <LinearLayout
                    android:id="@+id/text_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/prompt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="24dp"
                        android:layout_marginHorizontal="24dp"
                        android:focusable="false"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/color_primary_light"
                        tools:text="If you could add a word to the dictionary what would you add and what would it mean?"
                        />

                    <EditText
                        android:id="@+id/edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="180dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="60dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/rubikbubbles"
                        android:gravity="center"
                        android:background="@null"
                        android:textSize="40dp"
                        android:maxLines="6"
                        android:maxLength="60"
                        android:inputType="textCapCharacters"
                        android:hint="@string/your_answer_caps"
                        />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <FrameLayout
        android:id="@+id/controls_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp">

        <ImageView
            android:id="@+id/emoji_button"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginEnd="13dp"
            android:layout_marginStart="13dp"
            android:layout_marginBottom="2dp"
            android:scaleType="center"
            android:src="@drawable/ic_emoji_smile"
            android:layout_gravity="center_vertical|start"/>

        <ImageButton
            android:id="@+id/done_button"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:background="@drawable/bg_custom_fab"
            android:backgroundTint="@color/color_primary_light"
            android:src="@drawable/ic_done_check"
            android:visibility="invisible"
            android:layout_gravity="center_horizontal"/>

        <FrameLayout
            android:id="@+id/text_color_button"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginEnd="13dp"
            android:layout_marginStart="13dp"
            android:layout_marginBottom="2dp"
            android:layout_gravity="center_vertical|end">

            <com.google.android.material.imageview.ShapeableImageView
                app:shapeAppearance="@style/CircularImageView"
                android:id="@+id/bg_color_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:src="@color/group_theme_3_bg" />

            <TextView
                android:id="@+id/remaining_chars_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="#181818"
                android:textSize="18dp"
                tools:text="60"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/text_composer_text_color_outline"/>

        </FrameLayout>

    </FrameLayout>

    <com.halloapp.emoji.EmojiKeyboardLayout
        android:id="@+id/emoji_keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.appcompat.widget.LinearLayoutCompat>
