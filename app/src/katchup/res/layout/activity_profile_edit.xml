<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background_dark"
    android:orientation="vertical"
    tools:context=".katchup.ProfileEditActivity">

    <LinearLayout
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/prev"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:scaleType="fitCenter"
            android:background="@null"
            android:src="@drawable/ic_close_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/color_primary_light"
            tools:ignore="ContentDescription" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/done"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:textSize="20sp"
            android:textColor="@color/color_primary_light"
            android:text="@string/done"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="32dp"
        android:layout_gravity="center_horizontal">

        <com.halloapp.katchup.JellybeanClipView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@null">

            <ImageView
                android:id="@+id/profile_picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:background="@null"
                tools:ignore="ContentDescription" />

        </com.halloapp.katchup.JellybeanClipView>

        <FrameLayout
            android:id="@+id/profile_picture_camera"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="24dp"
            android:background="@drawable/bg_profile_picture_camera">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_camera"
                app:tint="@color/black" />

        </FrameLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="22dp"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="@string/profile_name"/>

        <EditText
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:backgroundTint="@color/white_40"
            android:textSize="18sp"
            android:textColor="@color/white"
            tools:text="Defneeee"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="22dp"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="@string/profile_username"/>

        <EditText
            android:id="@+id/username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:backgroundTint="@color/white_40"
            android:textSize="18sp"
            android:textColor="@color/white"
            tools:text="defne"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="22dp"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="@string/profile_bio"/>

        <EditText
            android:id="@+id/bio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:backgroundTint="@color/white_40"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:editable="false"
            android:focusable="false"
            tools:text="sup erryone"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="22dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="@string/profile_links"/>

        <TextView
            android:id="@+id/links"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/white_40"
            android:drawableEnd="@drawable/ic_arrow_forward"
            android:drawableTint="@color/white"
            android:drawablePadding="4dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textAlignment="textEnd"
            android:text="@string/links_hint"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="22dp"
        android:layout_marginTop="40dp"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="@string/profile_phone" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:backgroundTint="@color/white_40"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:hint="@string/phone_hint"
            android:textColorHint="@color/white_50"
            android:editable="false"
            android:focusable="false" />

    </LinearLayout>

</LinearLayout>
