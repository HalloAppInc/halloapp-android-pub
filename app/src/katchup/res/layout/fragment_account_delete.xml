<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/window_background_dark">

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:text="@string/delete_account_warning"
        tools:visibility="gone" />

    <LinearLayout
        android:id="@+id/confirm_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white_70"
            android:textSize="16sp"
            android:text="@string/delete_account_phone_confirm"/>

        <LinearLayout
            android:id="@+id/phone_number_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_settings_field"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingEnd="0dp"
                android:paddingVertical="6dp"
                android:layout_marginEnd="10dp">

                <com.hbb20.CountryCodePicker
                    android:id="@+id/ccp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:ccp_autoDetectCountry="true"
                    app:ccp_contentColor="@color/white_50"
                    app:ccp_countryPreference="us"
                    app:ccp_showNameCode="false"
                    app:ccp_showPhoneCode="true"
                    app:ccp_hintExampleNumberType="MOBILE"
                    app:ccp_hintExampleNumber="true"
                    app:ccp_useFlagEmoji="true"
                    app:ccpDialog_showTitle="false"
                    app:ccpDialog_backgroundColor="@color/report_option_background"
                    app:ccpDialog_searchEditTextTint="@color/white_50"
                    app:ccpDialog_textColor="@color/white" />

            </FrameLayout>

            <EditText
                android:id="@+id/phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="0dp"
                android:paddingEnd="20dp"
                android:paddingVertical="14dp"
                android:autofillHints="phoneNational"
                android:background="@null"
                android:textSize="18sp"
                android:hint="@string/phone_number_hint"
                android:inputType="phone"
                android:textColor="@color/white"
                android:textColorHint="@color/white_50"
                tools:ignore="UnusedAttribute" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:textColor="@color/white_70"
            android:textSize="16sp"
            android:text="@string/delete_account_feedback"/>

        <EditText
            android:id="@+id/feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:paddingHorizontal="14dp"
            android:paddingVertical="12dp"
            android:gravity="top"
            android:minLines="3"
            android:background="@drawable/bg_settings_field"
            android:textColorHint="@color/white_50"
            android:textColor="@color/white"
            android:hint="@string/delete_katchup_account_feedback_hint"
            />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/continue_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:paddingTop="9dp"
        android:paddingBottom="11dp"
        android:layout_marginBottom="10dp"
        android:background="@color/report_option_background"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:text="@string/continue_button_lowercase"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:paddingTop="9dp"
        android:paddingBottom="11dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_delete_button_selector"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:text="@string/delete_katchup_account_button" />

    <TextView
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:text="@string/cancel_lowercase" />

</LinearLayout>
