<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingBottom="15dp"
    android:clipToPadding="false"
    tools:background="@color/window_background_light">

    <LinearLayout
        android:id="@+id/moment_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone"
        >

        <com.halloapp.katchup.JellybeanClipView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="7dp"
            android:background="@null">

            <ImageView
                android:id="@+id/header_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                tools:src="@drawable/test_image"/>

        </com.halloapp.katchup.JellybeanClipView>

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:cardElevation="0dp"
        app:cardCornerRadius="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clipChildren="false"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintDimensionRatio="3:4"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/image_container"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintDimensionRatio="3:4"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/image"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:scaleType="centerCrop"
                                tools:src="@mipmap/ic_launcher" />

                        </LinearLayout>

                        <com.halloapp.katchup.JellybeanClipView
                            android:id="@+id/selfie_container"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_margin="11dp"
                            android:background="@null"
                            >

                            <ImageView
                                android:id="@+id/selfie_preview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:scaleType="centerCrop"
                                tools:src="@drawable/test_image"/>

                        </com.halloapp.katchup.JellybeanClipView>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <eightbitlab.com.blurview.BlurView
                        android:id="@+id/blur_view"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toBottomOf="@id/content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:visibility="gone">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </eightbitlab.com.blurview.BlurView>

                    <ImageView
                        android:id="@+id/moment_cover"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="@id/content"
                        app:layout_constraintBottom_toBottomOf="@id/content"
                        android:visibility="gone"
                        android:background="@drawable/bg_moment_overlay"/>

                    <LinearLayout
                        android:id="@+id/unlock_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="0dp"
                        app:layout_constraintTop_toTopOf="@id/content"
                        app:layout_constraintBottom_toBottomOf="@id/content"
                        android:orientation="vertical">

                        <com.halloapp.katchup.JellybeanClipView
                            android:id="@+id/avatar_container"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@null">

                            <ImageView
                                android:id="@+id/avatar"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:scaleType="centerCrop"
                                tools:src="@drawable/test_image"/>

                        </com.halloapp.katchup.JellybeanClipView>

                        <TextView
                            android:id="@+id/unlock_main_text"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="0dp"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center"
                            android:textColor="@color/white_80"
                            android:textSize="17dp"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:shadowColor="@color/black_20"
                            android:shadowRadius="10"
                            tools:text="Magnus Carlsen's moment" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/unlock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/white_button_color_selector"
                            android:fontFamily="sans-serif-medium"
                            android:letterSpacing="0.01"
                            android:maxLines="1"
                            android:paddingStart="20dp"
                            android:paddingEnd="19dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="10dp"
                            android:stateListAnimator="@null"
                            android:text="@string/view_action"
                            android:textAllCaps="false"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            app:cornerRadius="30dp"
                            app:icon="@drawable/ic_eye_slash"
                            app:iconTint="@color/black"
                            />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <com.halloapp.katchup.CountingCommentBubble
                android:id="@+id/comments"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="17dp"
                android:layout_marginBottom="19dp"
                android:elevation="2dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
