<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingBottom="15dp"
    android:clipToPadding="false"
    tools:background="@color/window_background_light">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/moment_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <com.halloapp.katchup.JellybeanClipView
            android:id="@+id/avatar_holder"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="7dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@null">

            <ImageView
                android:id="@+id/header_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                tools:src="@drawable/test_image"/>

        </com.halloapp.katchup.JellybeanClipView>

        <TextView
            android:id="@+id/header_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/header_time_and_place"
            app:layout_constraintStart_toEndOf="@+id/avatar_holder"
            app:layout_constraintVertical_chainStyle="packed"
            android:fontFamily="sans-serif-medium"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:maxLines="1"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/header_geotag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:layout_marginStart="6dp"
            app:layout_constraintStart_toEndOf="@+id/header_username"
            app:layout_constraintTop_toTopOf="@+id/header_username"
            app:layout_constraintBottom_toBottomOf="@+id/header_username"
            android:background="@drawable/geotag_background_light"
            android:fontFamily="sans-serif-medium"
            android:textSize="10sp"
            android:textColor="@color/black"
            tools:text="ucla"
            />

        <TextView
            android:id="@+id/header_time_and_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            app:layout_constraintStart_toEndOf="@+id/avatar_holder"
            app:layout_constraintTop_toBottomOf="@+id/header_username"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="12sp"
            android:textColor="@color/white_70"
            />

        <TextView
            android:id="@+id/follow_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="2dp"
            android:paddingEnd="9dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/header_time_and_place"
            app:layout_constraintStart_toEndOf="@+id/header_time_and_place"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            android:text="@string/follow_profile"
            android:fontFamily="sans-serif-medium"
            android:textSize="12sp"
            android:textColor="@color/white"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:strokeColor="@color/white"
        app:strokeWidth="@dimen/post_stroke_width"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/post_card_radius">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clipChildren="false"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintDimensionRatio="3:4"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/image_container"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintDimensionRatio="3:4"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/image"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:scaleType="centerCrop"
                                tools:src="@mipmap/ic_launcher" />

                        </LinearLayout>

                        <com.halloapp.katchup.JellybeanClipView
                            android:id="@+id/selfie_container"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_margin="11dp"
                            android:background="@null"
                            app:jcvOutlineWidth="3dp"
                            >

                            <ImageView
                                android:id="@+id/selfie_preview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:scaleType="centerCrop"
                                tools:src="@drawable/test_image"/>

                            <com.halloapp.widget.ContentPlayerView
                                android:id="@+id/selfie_player"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                app:surface_type="texture_view"
                                app:show_shuffle_button="false"
                                android:animateLayoutChanges="true"
                                app:show_buffering="never"
                                app:resize_mode="zoom"
                                app:controller_layout_id="@layout/exo_player_composer_view"
                                app:shutter_background_color="@android:color/black"
                                app:show_timeout="1000" />

                            <com.halloapp.katchup.LoadingView
                                android:id="@+id/selfie_loading"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"/>

                        </com.halloapp.katchup.JellybeanClipView>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <eightbitlab.com.blurview.BlurView
                        android:id="@+id/blur_view"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toBottomOf="@id/content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:visibility="gone">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </eightbitlab.com.blurview.BlurView>

                    <ImageView
                        android:id="@+id/moment_cover"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="@id/content"
                        app:layout_constraintBottom_toBottomOf="@id/content"
                        android:visibility="gone"
                        android:background="@drawable/bg_moment_overlay"/>

                    <ProgressBar
                        android:id="@+id/uploading_progress"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:indeterminateDuration="1500"
                        android:visibility="gone"
                        android:indeterminateDrawable="@drawable/thick_moments_spinner" />

                    <LinearLayout
                        android:id="@+id/unlock_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="0dp"
                        app:layout_constraintTop_toTopOf="@id/content"
                        app:layout_constraintBottom_toBottomOf="@id/content"
                        android:orientation="vertical">

                        <com.halloapp.katchup.JellybeanClipView
                            android:id="@+id/avatar_container"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@null">

                            <ImageView
                                android:id="@+id/avatar"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:scaleType="centerCrop"
                                tools:src="@drawable/test_image"/>

                        </com.halloapp.katchup.JellybeanClipView>

                        <TextView
                            android:id="@+id/unlock_main_text"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="0dp"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center"
                            android:textColor="@color/white_80"
                            android:textSize="21dp"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:shadowColor="@color/black_20"
                            android:shadowRadius="10"
                            tools:text="Magnus Carlsen's moment" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/unlock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/white_button_color_selector"
                            android:fontFamily="@font/krona_one"
                            android:letterSpacing="0.01"
                            android:maxLines="1"
                            android:paddingStart="20dp"
                            android:paddingEnd="16dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="13dp"
                            android:stateListAnimator="@null"
                            android:text="@string/card_btn_view_katchup"
                            android:textAllCaps="false"
                            android:textSize="21dp"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            app:cornerRadius="30dp"
                            />

                    </LinearLayout>

                    <com.halloapp.katchup.LoadingView
                        android:id="@+id/content_loading"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:visibility="gone" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <com.halloapp.katchup.ui.CountingLikeButton
                android:id="@+id/likes"
                android:layout_width="46dp"
                android:layout_height="44dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/comments"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="19dp"
                android:elevation="2dp"
                />

            <com.halloapp.katchup.ui.CountingCommentBubble
                android:id="@+id/comments"
                android:layout_width="47dp"
                android:layout_height="44dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="19dp"
                android:elevation="2dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/server_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:textColor="@color/white"
        android:visibility="gone"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/entry_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="46dp"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/video_reaction_record_button"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/bg_comment_input_feed">

            <ImageView
                style="?actionButtonStyle"
                android:id="@+id/kb_toggle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:layout_gravity="center"
                android:clickable="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:tint="@color/white_70"
                android:src="@drawable/ic_emoji_keyboard"/>

            <TextView
                android:id="@+id/entry_card"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:text="@string/comment_hint"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:fontFamily="sans-serif-medium"
                app:layout_constraintStart_toEndOf="@id/kb_toggle"
                app:layout_constraintEnd_toStartOf="@+id/media"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <FrameLayout
            android:id="@+id/video_reaction_record_button"
            app:layout_constraintStart_toEndOf="@id/entry_container"
            app:layout_constraintBottom_toBottomOf="@id/entry_container"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="64dp"
            android:layout_height="45dp"
            android:layout_marginHorizontal="10dp"
            android:visibility="gone"
            android:background="@drawable/bg_comment_reaction_feed">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:paddingLeft="2dp"
                android:scaleType="center"
                android:src="@drawable/bg_record_video_reaction_feed"/>

            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_gravity="center"
                android:scaleType="center"
                android:src="@drawable/ic_video_reaction"/>

        </FrameLayout>

        <View
            android:id="@+id/recording_indicator"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:gravity="center_vertical"
            android:background="@drawable/recording_indicator"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_marginBottom="5dp"
            android:visibility="gone"
            android:backgroundTint="@color/recording_color"
            app:layout_constraintStart_toStartOf="@id/entry_container"
            app:layout_constraintTop_toTopOf="@id/video_reaction_record_button"
            app:layout_constraintBottom_toBottomOf="@id/video_reaction_record_button"
            tools:text="00:01"/>

        <Chronometer
            android:id="@+id/recording_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/recording_color"
            android:textSize="21sp"
            android:visibility="gone"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintStart_toEndOf="@id/recording_indicator"
            app:layout_constraintTop_toTopOf="@id/video_reaction_record_button"
            app:layout_constraintBottom_toBottomOf="@id/video_reaction_record_button"
            tools:text="00:01"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
