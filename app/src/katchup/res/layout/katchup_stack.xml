<?xml version="1.0" encoding="utf-8"?>
<view class="com.halloapp.katchup.KatchupStackLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    app:layoutDescription="@xml/moments_stack_scene"
    android:descendantFocusability="blocksDescendants"
    android:paddingTop="40dp"
    android:paddingHorizontal="20dp"
    >

    <include android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:rotation="10"
        android:alpha="0"
        layout="@layout/post_item_katchup" />

    <include android:id="@+id/middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:rotation="10"
        layout="@layout/post_item_katchup" />

    <include android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/post_item_katchup" />

</view>
