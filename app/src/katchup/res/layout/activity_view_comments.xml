<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipChildren="false">

    <com.halloapp.katchup.JellybeanClipView
        android:id="@+id/avatar_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="13dp"
        android:layout_width="48dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@drawable/avatar_person"
            android:scaleType="centerCrop"
            />

    </com.halloapp.katchup.JellybeanClipView>

    <TextView
        android:id="@+id/name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintStart_toEndOf="@id/avatar_container"
        app:layout_constraintTop_toTopOf="@id/avatar_container"
        app:layout_constraintBottom_toBottomOf="@id/avatar_container"
        android:layout_marginStart="8dp"
        tools:text="Clark"/>

    <TextView
        android:id="@+id/time_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white_40"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintStart_toEndOf="@id/name_text_view"
        app:layout_constraintTop_toTopOf="@id/avatar_container"
        android:layout_marginStart="7dp"
        app:layout_constraintBottom_toBottomOf="@id/avatar_container"
        tools:text="4h late"
        android:textSize="17sp"/>

    <ImageButton
        android:id="@+id/share_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="?selectableItemBackgroundBorderless"
        app:layout_constraintTop_toTopOf="@+id/avatar_container"
        app:layout_constraintBottom_toBottomOf="@id/avatar_container"
        app:layout_constraintEnd_toStartOf="@id/more_options"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_share"
        app:tint="@color/white"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/more_options"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="?selectableItemBackgroundBorderless"
        app:layout_constraintTop_toTopOf="@+id/avatar_container"
        app:layout_constraintBottom_toBottomOf="@id/avatar_container"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_more"
        app:tint="@color/white_50"/>

    <FrameLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/avatar_container"
        android:layout_marginTop="7dp"
        app:layout_constraintDimensionRatio="3:4">

        <ImageView
            android:id="@+id/content_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@drawable/test_image"
            android:scaleType="centerCrop"/>

        <com.halloapp.widget.ContentPlayerView
            android:id="@+id/content_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:show_shuffle_button="false"
            android:animateLayoutChanges="true"
            android:visibility="gone"
            app:show_buffering="never"
            app:show_timeout="1000"
            app:resize_mode="zoom"
            app:contentPlayerVideoCornerRadius="@dimen/post_card_radius"/>

    </FrameLayout>

    <com.halloapp.katchup.JellybeanClipView
        android:id="@+id/selfie_container"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constrainedWidth="true"
        app:layout_constraintStart_toStartOf="@id/content_container"
        app:layout_constraintTop_toTopOf="@id/content_container"
        android:layout_height="wrap_content"
        app:jcvRotation="@integer/jellybean_slant_right_up"
        app:jcvOutlineWidth="3dp">

        <com.halloapp.widget.ContentPlayerView
            android:id="@+id/selfie_player"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:surface_type="texture_view"
            app:show_shuffle_button="false"
            android:animateLayoutChanges="true"
            app:show_buffering="never"
            app:resize_mode="zoom"
            app:controller_layout_id="@layout/exo_player_composer_view"
            app:show_timeout="1000" />

    </com.halloapp.katchup.JellybeanClipView>

    <View
        android:id="@+id/content_protection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:background="#BF000000"/>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/entry"
        >

        <FrameLayout
            android:id="@+id/bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:behavior_hideable="false"
            app:behavior_peekHeight="130dp"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/comments_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </FrameLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <View
        android:id="@+id/record_protection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:background="#BF000000"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/black"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/sticker_send_container"
            android:layout_width="match_parent"
            android:layout_height="90sp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/entry_disclaimer">

            <com.halloapp.katchup.ui.TextStickerView
                android:id="@+id/sticker_preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#C2D69B"
                android:fontFamily="@font/rubikbubbles"
                android:textSize="43sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:rotation="-10"
                android:visibility="gone"
                android:singleLine="true"
                tools:text="OOOOOOOOO"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/emoji_preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

        </FrameLayout>

        <TextView
            android:id="@+id/entry_disclaimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/entry_container"
            app:layout_constraintBottom_toTopOf="@id/entry_container"
            android:textColor="@color/white_70"
            android:layout_marginStart="14dp"
            android:paddingVertical="3dp"
            android:text="@string/visible_to_everyone"/>
        
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/entry_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="46dp"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/video_reaction_record_button"
            app:layout_constraintBottom_toTopOf="@id/emoji_keyboard"
            android:background="@drawable/bg_comment_input">

            <ImageView
                style="?actionButtonStyle"
                android:id="@+id/kb_toggle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:layout_gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:tint="@color/white_70"
                android:src="@drawable/ic_emoji_keyboard"/>

            <com.halloapp.widget.MentionableEntry
                android:id="@+id/entry_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@null"
                android:hint="@string/type_a_message_hint"
                android:importantForAutofill="no"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textColorHint="@color/white_50"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLines="6"
                app:layout_constraintStart_toEndOf="@id/kb_toggle"
                app:layout_constraintEnd_toStartOf="@+id/media"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <FrameLayout
            android:id="@+id/video_reaction_record_button"
            app:layout_constraintStart_toEndOf="@id/entry_container"
            app:layout_constraintBottom_toBottomOf="@id/entry_container"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="64dp"
            android:layout_height="45dp"
            android:layout_marginHorizontal="10dp">

            <com.halloapp.katchup.JellybeanClipView
                android:id="@+id/video_reaction_avatar_container"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/send_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black_30"/>

            </com.halloapp.katchup.JellybeanClipView>

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="center"
                android:scaleType="center"
                android:src="@drawable/ic_video_reaction"/>

        </FrameLayout>

        <View
            android:id="@+id/recording_indicator"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:gravity="center_vertical"
            android:background="@drawable/recording_indicator"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_marginBottom="5dp"
            android:visibility="gone"
            android:backgroundTint="@color/recording_color"
            app:layout_constraintStart_toStartOf="@id/entry_container"
            app:layout_constraintTop_toTopOf="@id/video_reaction_record_button"
            app:layout_constraintBottom_toBottomOf="@id/video_reaction_record_button"
            tools:text="00:01"/>

        <Chronometer
            android:id="@+id/recording_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/recording_color"
            android:textSize="21sp"
            android:visibility="gone"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintStart_toEndOf="@id/recording_indicator"
            app:layout_constraintTop_toTopOf="@id/video_reaction_record_button"
            app:layout_constraintBottom_toBottomOf="@id/video_reaction_record_button"
            tools:text="00:01"/>

        <FrameLayout
            android:id="@+id/send_comment_button"
            app:layout_constraintStart_toEndOf="@id/entry_container"
            app:layout_constraintBottom_toBottomOf="@id/entry_container"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="64dp"
            android:layout_height="45dp"
            android:visibility="gone"
            android:layout_marginHorizontal="10dp">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="center"
                android:scaleType="center"
                android:src="@drawable/ic_comment_send"/>

        </FrameLayout>

        <com.halloapp.emoji.EmojiKeyboardLayout
            android:id="@+id/emoji_keyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.halloapp.katchup.ui.VideoReactionRecordControlView
        android:id="@+id/reaction_control_view"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent"/>

    <com.halloapp.katchup.JellybeanClipView
        android:id="@+id/video_preview_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/entry"
        app:jcvRotation="@integer/jellybean_slant_left_up"
        app:layout_constraintWidth_percent="0.5">

        <androidx.camera.view.PreviewView
            android:id="@+id/video_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:implementationMode="compatible"
            app:scaleType="fillCenter" />

        <View
            android:id="@+id/preview_block"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"/>

    </com.halloapp.katchup.JellybeanClipView>

    <com.halloapp.katchup.VideoReactionProgressView
        android:id="@+id/video_reaction_progress"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@id/video_preview_container"
        app:layout_constraintEnd_toEndOf="@id/video_preview_container"
        app:layout_constraintTop_toTopOf="@id/video_preview_container"
        app:layout_constraintBottom_toBottomOf="@id/video_preview_container"/>


</androidx.constraintlayout.widget.ConstraintLayout>
