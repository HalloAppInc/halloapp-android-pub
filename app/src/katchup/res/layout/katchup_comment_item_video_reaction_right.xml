<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp">

    <com.halloapp.katchup.JellybeanClipView
        android:id="@+id/video_container"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:src="@drawable/test_image">

        <com.halloapp.widget.ContentPlayerView
            android:id="@+id/video_player"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:surface_type="texture_view"
            app:show_shuffle_button="false"
            android:visibility="gone"
            android:animateLayoutChanges="true"
            app:show_buffering="never"
            app:resize_mode="zoom"
            app:controller_layout_id="@layout/exo_player_composer_view"
            app:show_timeout="1000"
            app:contentPlayerVideoCornerRadius="@dimen/content_composer_media_border"/>

    </com.halloapp.katchup.JellybeanClipView>



</androidx.constraintlayout.widget.ConstraintLayout>
