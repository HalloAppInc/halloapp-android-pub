<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background_light"
    android:fitsSystemWindows="true"
    android:clipChildren="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pings_tab"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/feed_type_container"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/feed_tab_background"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pings_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/following_tab"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/feed_type_container"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/feed_tab_background"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/following_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/post_your_own"
                android:layout_marginBottom="20dp"
                android:text="@string/no_new_katchups_today"
                android:textSize="20sp"
                android:textColor="@color/black_40"
                />

            <TextView
                android:id="@+id/post_your_own"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingVertical="12dp"
                android:paddingHorizontal="24dp"
                android:background="@drawable/post_your_own_button_background"
                android:text="@string/post_your_own"
                android:textColor="@color/black"
                android:textSize="21sp"
                />

            <TextView
                android:id="@+id/find_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/avatars"
                app:layout_constraintEnd_toEndOf="@+id/avatars"
                app:layout_constraintBottom_toTopOf="@+id/avatars"
                android:layout_marginBottom="12dp"
                android:text="@string/find_people_katchup"
                android:textColor="@color/black_40"
                />

            <LinearLayout
                android:id="@+id/avatars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="50dp"
                >

                <com.halloapp.katchup.JellybeanClipView
                    android:id="@+id/suggested_avatar_clip_1"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@null">

                    <ImageView
                        android:id="@+id/suggested_avatar_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        tools:src="@drawable/test_image"/>

                </com.halloapp.katchup.JellybeanClipView>

                <com.halloapp.katchup.JellybeanClipView
                    android:id="@+id/suggested_avatar_clip_2"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-20dp"
                    android:background="@null">

                    <ImageView
                        android:id="@+id/suggested_avatar_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        tools:src="@drawable/test_image"/>

                </com.halloapp.katchup.JellybeanClipView>

                <com.halloapp.katchup.JellybeanClipView
                    android:id="@+id/suggested_avatar_clip_3"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-20dp"
                    android:background="@null">

                    <ImageView
                        android:id="@+id/suggested_avatar_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        tools:src="@drawable/test_image"/>

                </com.halloapp.katchup.JellybeanClipView>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/only_own_post"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/following_list"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/only_own_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.6"
                android:layout_marginHorizontal="36dp"
                android:padding="25dp"
                android:gravity="center"
                android:text="@string/only_own_empty_text"
                android:textSize="20sp"
                android:textColor="@color/black_40"
                />

            <LinearLayout
                android:id="@+id/only_own_avatars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/only_own_text"
                >

                <com.halloapp.katchup.JellybeanClipView
                    android:id="@+id/only_own_suggested_avatar_clip_1"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@null">

                    <ImageView
                        android:id="@+id/only_own_suggested_avatar_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        tools:src="@drawable/test_image"/>

                </com.halloapp.katchup.JellybeanClipView>

                <com.halloapp.katchup.JellybeanClipView
                    android:id="@+id/only_own_suggested_avatar_clip_2"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-20dp"
                    android:background="@null">

                    <ImageView
                        android:id="@+id/only_own_suggested_avatar_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        tools:src="@drawable/test_image"/>

                </com.halloapp.katchup.JellybeanClipView>

                <com.halloapp.katchup.JellybeanClipView
                    android:id="@+id/only_own_suggested_avatar_clip_3"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-20dp"
                    android:background="@null">

                    <ImageView
                        android:id="@+id/only_own_suggested_avatar_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        tools:src="@drawable/test_image"/>

                </com.halloapp.katchup.JellybeanClipView>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/following_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_min="160dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/only_own_post"
            android:clipToPadding="false"
            />

        <LinearLayout
            android:id="@+id/enable_notifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:paddingHorizontal="24dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"
            android:background="@drawable/enable_access_banner_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:text="@string/enable_notifications"
                />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/discover_tab"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/feed_type_container"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/feed_tab_background"
        >

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/public_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <LinearLayout
            android:id="@+id/public_feed_failed_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/public_feed_failed_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black_40" />

            <TextView
                android:id="@+id/tap_to_refresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="@string/tap_to_try_again"
                android:gravity="center"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/request_location_access"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:paddingHorizontal="24dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"
            android:background="@drawable/enable_access_banner_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:text="@string/request_location_access_banner"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/discover_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:paddingHorizontal="24dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/request_location_access"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"
            android:background="@drawable/discover_refresh_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:text="@string/discover_refresh"
                />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/protective_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/feed_type_container"
        android:alpha="0.95"
        android:background="@color/window_background_light"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/wordmark_top_margin"
        android:textSize="35sp"
        android:fontFamily="@font/rubikbubbles"
        android:text="@string/app_name_katchup"
        android:textAllCaps="true"
        android:textColor="@color/color_primary"
        />

    <ImageButton
        android:id="@+id/prev"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginTop="39dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@null"
        android:src="@drawable/ic_people"
        app:tint="@android:color/black"
        />

    <TextView
        android:id="@+id/new_follower_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/prev"
        app:layout_constraintStart_toEndOf="@+id/prev"
        android:layout_marginStart="-9dp"
        android:layout_marginTop="-9dp"
        android:paddingHorizontal="4dp"
        android:paddingTop="1dp"
        android:paddingBottom="2dp"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:background="@drawable/new_follower_background"
        android:textStyle="bold"
        tools:text="+12"
        />

    <com.halloapp.katchup.JellybeanClipView
        android:id="@+id/next"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="@id/prev"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/prev"
        android:background="@null">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:scaleType="centerCrop"
            tools:src="@drawable/test_image"/>

    </com.halloapp.katchup.JellybeanClipView>

    <LinearLayout
        android:id="@+id/feed_type_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingBottom="14dp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/pings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="18dp"
            android:paddingBottom="8dp"
            android:paddingTop="7dp"
            android:layout_marginStart="10dp"
            android:textSize="17sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/white"
            android:background="@drawable/selected_feed_type_background"
            android:text="@string/feed_type_activity"
            />

        <TextView
            android:id="@+id/following"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="18dp"
            android:paddingBottom="8dp"
            android:paddingTop="7dp"
            android:layout_marginStart="10dp"
            android:textSize="17sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/white"
            android:background="@drawable/selected_feed_type_background"
            android:text="@string/feed_type_following"
            />

        <ImageView
            android:id="@+id/updated_following_feed_dot"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_marginStart="-18dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/ic_updated_feed_dot"
            app:layout_constraintStart_toEndOf="@+id/following"
            app:layout_constraintTop_toTopOf="@+id/following"/>

        <TextView
            android:id="@+id/discover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:paddingHorizontal="18dp"
            android:paddingBottom="8dp"
            android:paddingTop="7dp"
            android:textSize="17sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/white"
            android:background="@drawable/selected_feed_type_background"
            android:text="@string/feed_type_discover"
            />

        <ImageView
            android:id="@+id/updated_public_feed_dot"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_marginStart="-18dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/ic_updated_feed_dot"
            app:layout_constraintStart_toEndOf="@+id/discover"
            app:layout_constraintTop_toTopOf="@+id/discover"/>

    </LinearLayout>

    <View
        android:id="@+id/record_protection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:background="#BF000000"/>

    <View
        android:id="@+id/recording_indicator"
        android:layout_width="9dp"
        android:layout_height="9dp"
        android:gravity="center_vertical"
        android:background="@drawable/recording_indicator"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_marginBottom="4dp"
        android:visibility="gone"
        android:backgroundTint="@color/recording_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="00:01"/>

    <Chronometer
        android:id="@+id/recording_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textColor="@color/recording_color"
        android:textSize="21sp"
        android:visibility="gone"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintStart_toEndOf="@id/recording_indicator"
        app:layout_constraintTop_toTopOf="@id/recording_indicator"
        app:layout_constraintBottom_toBottomOf="@id/recording_indicator"
        tools:text="00:01"/>

    <com.halloapp.katchup.ui.VideoReactionRecordControlView
        android:id="@+id/reaction_control_view"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent"/>

    <com.halloapp.katchup.JellybeanClipView
        android:id="@+id/video_preview_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/recording_indicator"
        app:jcvRotation="@integer/jellybean_slant_left_up"
        app:layout_constraintWidth_percent="0.5">

        <androidx.camera.view.PreviewView
            android:id="@+id/video_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:implementationMode="compatible"
            app:scaleType="fillCenter" />

        <View
            android:id="@+id/preview_block"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <!-- TODO(vasil): Add ContentPlayerView that fades here-->

    </com.halloapp.katchup.JellybeanClipView>

    <com.halloapp.katchup.VideoReactionProgressView
        android:id="@+id/video_reaction_progress"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:visibility="invisible"
        app:vrpvRotation="@integer/jellybean_slant_left_up"
        app:layout_constraintStart_toStartOf="@id/video_preview_container"
        app:layout_constraintEnd_toEndOf="@id/video_preview_container"
        app:layout_constraintTop_toTopOf="@id/video_preview_container"
        app:layout_constraintBottom_toBottomOf="@id/video_preview_container"/>

</androidx.constraintlayout.widget.ConstraintLayout>
